                android:startColor="@color/black"
                android:angle="180"
                android:endColor="@color/button_raised_shadow" />
            <!--<solid android:color="@color/button_raised_shadow" />-->
            <padding android:left="2dp" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="2dp" />
            <!--<padding-->
            <!--android:bottom="2dp"-->
