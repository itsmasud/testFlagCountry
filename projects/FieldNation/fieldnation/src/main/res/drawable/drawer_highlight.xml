<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <corners
                android:bottomRightRadius="5px"
                android:topRightRadius="5px" />

            <solid android:color="@color/fn_accent_color" />
        </shape>
    </item>
    <item
        android:bottom="2px"
        android:left="2px"
        android:right="2px"
        android:top="2px">
        <shape android:shape="rectangle">
            <corners
                android:bottomRightRadius="5px"
                android:topRightRadius="5px" />

            <solid android:color="@color/fn_accent_color_50" />
        </shape>
    </item>

</layer-list>