<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <rotate
            android:fromDegrees="90"
            android:toDegrees="0"
            android:pivotX="50%"
            android:pivotY="50%"
            android:drawable="@drawable/ic_nav_arrow_r" />
    </item>

    <item android:state_activated="true">
        <rotate
            android:fromDegrees="90"
            android:toDegrees="0"
            android:pivotX="50%"
            android:pivotY="50%"
            android:drawable="@drawable/ic_nav_arrow_r" />
    </item>
    <!--<item android:drawable="@drawable/btn_orange_disabled" android:state_enabled="false" />-->
    <item >
        <rotate
            android:fromDegrees="0"
            android:toDegrees="90"
            android:pivotX="50%"
            android:pivotY="50%"
            android:drawable="@drawable/ic_nav_arrow_r" />
    </item>

</selector>