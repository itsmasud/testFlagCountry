        <RelativeLayout
            style="@style/TileContainer.Material"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0dp">

            <RelativeLayout
                android:id="@+id/payment_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp">

                <LinearLayout
                    android:id="@+id/payTitle_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/title_textview"
                        style="@style/Text_Body_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="Payment 434" />

                    <TextView
                        android:id="@+id/time_textview"
                        style="@style/Text_Caption"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10/12/2017" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/pay_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="16dp"
                    android:gravity="right"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/payment_textview"
                        style="@style/Text_Body_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$280.00" />

                </LinearLayout>
            </RelativeLayout>

            <View
                style="@style/DividerFull"
                android:layout_below="@+id/payment_layout" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/month_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="16dp"
                android:layout_marginLeft="16dp"
                android:textSize="14sp"
                android:textStyle="bold"
                android:paddingTop="16dp"
                android:textColor="@color/fn_light_text"
                android:text="Associated Work Orders" />

            <View
                style="@style/DividerFull"
                android:layout_below="@+id/month_textview" />

        </RelativeLayout>

        <ListView
            android:id="@+id/items_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null"
            android:dividerHeight="0dp"
            android:smoothScrollbar="true" />
