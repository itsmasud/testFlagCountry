<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        style="@style/Dialog_Container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/Dialog_Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/activity_bundle_detail" />

        <TextView
            android:id="@+id/accept_description"
            style="@style/Text_Body_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This workorder is part of a bundle of 10  workorders. By accepting this workorder you are accepting all of them." />

    </LinearLayout>

    <LinearLayout
        style="@style/Dialog_ActionBar"
        android:orientation="horizontal">

        <Button
            style="@style/Dialog_Ok_Button"
            android:gravity="center_vertical|left"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="VIEW BUNDLE" />

        <LinearLayout
            android:layout_gravity="center_vertical|right"
            android:gravity="right"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/cancel_button"
                style="@style/Dialog_Cancel_Button"
                android:text="@string/cancel" />

            <Button
                android:id="@+id/ok_button"
                style="@style/Dialog_Ok_Button"
                android:text="@string/ok" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>