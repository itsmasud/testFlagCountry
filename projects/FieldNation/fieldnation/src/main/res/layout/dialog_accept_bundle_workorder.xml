<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    style="?attr/dialogStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            style="?attr/dialogContainerStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="?attr/dialogTitleStyle"
                android:layout_marginBottom="@dimen/dialogContentPadding"
                android:text="Accept Bundle" />


            <TextView
                android:id="@+id/accept_description"
                style="@style/Text_Body_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This workorder is part of a bundle of 10 workorders. By accepting this workorder you are accepting all of them." />
        </LinearLayout>


        <LinearLayout
            style="?attr/dialogActionBarStyle"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0">

                <Button
                    android:id="@+id/bundle_button"
                    style="?attr/buttonDefaultStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="VIEW BUNDLE" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:layout_weight="1.50"
                android:gravity="right"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/cancel_button"
                    style="?attr/dialogCancelButtonStyle"
                    android:text="@string/btn_cancel" />

                <Button
                    android:id="@+id/ok_button"
                    style="?attr/dialogOkButtonStyle"
                    android:text="ACCEPT" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>