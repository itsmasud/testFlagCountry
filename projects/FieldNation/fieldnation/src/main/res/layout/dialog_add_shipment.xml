<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    style="?attr/dialogStyle"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        style="?attr/dialogContainerStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_textview"
            style="?attr/dialogTitleStyle"
            android:text="Add Shipment" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <EditText
                android:id="@+id/trackingid_edittext"
                style="@style/EditText"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/carrier_spinner"
                android:background="@drawable/edittext_bg"
                android:gravity="center_vertical"
                android:hint="@string/tracking_id"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:paddingLeft="10dp" />

            <Spinner
                android:id="@+id/carrier_spinner"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_alignBottom="@+id/trackingid_edittext"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/trackingid_edittext"
                android:text="@string/carrier" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/carriername_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                style="@style/WorkorderDetail_FieldSubTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Carrier Name:" />

            <EditText
                android:id="@+id/carrier_edittext"
                style="@style/EditText"
                android:layout_width="match_parent"
                android:hint="@string/carrier_name"
                android:imeOptions="actionNext"
                android:inputType="text" />
        </LinearLayout>

        <TextView
            style="@style/WorkorderDetail_FieldSubTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description:" />

        <EditText
            android:id="@+id/description_edittext"
            style="@style/EditText"
            android:layout_width="match_parent"
            android:hint="@string/shipment_description"
            android:imeOptions="actionDone"
            android:inputType="text" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                style="@style/RadioButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/shipping_from_size" />

            <RadioButton
                android:id="@+id/shiptosite_radio"
                style="@style/RadioButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/shipping_to_site" />
        </RadioGroup>

        <LinearLayout
            style="?attr/dialogActionBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/cancel_button"
                style="?attr/dialogCancelButtonStyle"
                android:text="@string/cancel" />

            <Button
                android:id="@+id/ok_button"
                style="?attr/dialogOkButtonStyle"
                android:text="@string/save" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>