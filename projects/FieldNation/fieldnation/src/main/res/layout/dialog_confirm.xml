<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    style="?attr/dialogStyle"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        style="?attr/dialogContainerStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            style="?attr/dialogTitleStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buyer's schedule" />

        <TextView
            android:id="@+id/schedule1_textview"
            style="?attr/dialogBodyStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Between March 4, 2014 and March 5, 2015" />

        <TextView
            android:id="@+id/schedule2_textview"
            style="?attr/dialogBodyStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Between 11:00 am and 3:00 am" />

        <View style="?attr/dialogDividerStyle" />

        <TextView
            style="?attr/dialogTitleStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your schedule" />

        <TextView
            style="?attr/dialogLabelStyle"
            android:text="Arrival Time" />

        <Button
            android:layout_gravity="left"
            android:id="@+id/start_date_button"
            style="?attr/buttonTextLinkStyle"
            android:text="March 4, 2014 and March 5, 2015" />

        <TextView
            style="?attr/dialogLabelStyle"
            android:text="Duration" />

        <Button
            android:id="@+id/duration_button"
            android:layout_gravity="left"
            style="?attr/buttonTextLinkStyle"
            android:text="4 hours" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/tac_checkbox"
                style="?attr/tileCheckBoxStyle"
                android:layout_width="wrap_content"
                android:text="I accept the" />

            <Button
                android:id="@+id/tac_button"
                style="?attr/buttonTextLinkStyle"
                android:text="@string/terms_and_conditions" />
        </LinearLayout>

        <LinearLayout
            style="?attr/dialogActionBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/cancel_button"
                style="?attr/dialogCancelButtonStyle"
                android:text="@string/cancel" />

            <Button
                android:id="@+id/ok_button"
                style="?attr/dialogOkButtonStyle"
                android:text="@string/confirm" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>