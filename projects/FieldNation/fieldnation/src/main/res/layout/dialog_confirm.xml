<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    style="?attr/dialogStyle"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            style="?attr/dialogContainerStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="?attr/dialogTitleStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confirm schedule" />

            <TextView
                style="?attr/dialogLabelStyle"
                android:text="Arrival Time" />

            <Button
                android:layout_gravity="left"
                android:id="@+id/start_date_button"
                style="?attr/buttonTextLinkStyle"
                android:text="March 4, 2014 and March 5, 2015" />

            <TextView
                android:id="@+id/schedule_textview"
                style="?attr/dialogBodyStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Arrival time must be between\n\tTuesday, March 4, 2014 at 11:00 am and\n\tTuesday, March 4, 2014 at 11:00 am CST" />

            <TextView
                style="?attr/dialogLabelStyle"
                android:text="Duration" />

            <Button
                android:id="@+id/duration_button"
                android:layout_gravity="left"
                style="?attr/buttonTextLinkStyle"
                android:text="4 hours" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/tac_checkbox"
                    style="?attr/tileCheckBoxStyle"
                    android:layout_width="wrap_content"
                    android:text="I accept" />

                <Button
                    android:id="@+id/tac_button"
                    style="?attr/buttonTextLinkStyle"
                    android:maxLines="1"
                    android:gravity="left|center_vertical"
                    android:text="@string/terms_and_conditions" />
            </LinearLayout>
        </LinearLayout>

        <View style="?attr/dialogDividerStyle" />

        <LinearLayout
            style="?attr/dialogActionBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/cancel_button"
                style="?attr/dialogCancelButtonStyle"
                android:text="@string/cancel" />

            <Button
                android:id="@+id/ok_button"
                style="?attr/dialogOkButtonStyle"
                android:text="@string/confirm" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>