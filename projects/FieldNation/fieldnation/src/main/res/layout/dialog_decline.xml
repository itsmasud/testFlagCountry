<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    style="?attr/dialogStyle"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            style="?attr/dialogContainerStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:orientation="vertical">

            <TextView
                style="?attr/dialogTitleStyle"
                android:text="@string/dialog_decline_title" />

            <TextView
                style="?attr/dialogBodyStyle"
                android:text="@string/dialog_decline_message" />


            <LinearLayout
                android:id="@+id/decline_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <com.fieldnation.ui.HintSpinner
                    android:id="@+id/decline_spinner"
                    style="@style/Widget.AppCompat.Spinner.Underlined"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/decline_reason"
                    android:visibility="visible" />

                <EditText
                    android:id="@+id/declineDetails_edittext"
                    style="@style/EditText"
                    android:layout_width="match_parent"
                    android:hint="@string/hint_text_additional_details"
                    android:visibility="gone" />
            </LinearLayout>

            <CheckBox
                android:id="@+id/block_checkbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/dialog_block_message" />

            <LinearLayout
                android:id="@+id/block_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.fieldnation.ui.HintSpinner
                        android:id="@+id/block_spinner"
                        style="@style/Widget.AppCompat.Spinner.Underlined"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/block_reason"
                        android:visibility="visible" />
                </LinearLayout>

                <EditText
                    android:id="@+id/blockDetails_edittext"
                    style="@style/EditText"
                    android:layout_width="match_parent"
                    android:hint="@string/hint_text_additional_details"
                    android:visibility="visible" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            style="?attr/dialogActionBarStyle"
            android:orientation="horizontal">

            <Button
                android:id="@+id/cancel_button"
                style="?attr/dialogCancelButtonStyle"
                android:text="@string/btn_cancel" />

            <Button
                android:id="@+id/ok_button"
                style="?attr/dialogOkButtonStyle"
                android:text="@string/btn_done" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>