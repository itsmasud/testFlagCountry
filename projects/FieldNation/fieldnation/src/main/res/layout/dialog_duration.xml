<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp" >

    <!-- number bar -->

    <LinearLayout
        android:id="@+id/numbers_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="20dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/day_textview"
                style="@style/DurationNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00" />

            <TextView
                style="@style/DurationMarker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="D" />

            <TextView
                android:id="@+id/hour_textview"
                style="@style/DurationNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00" />

            <TextView
                style="@style/DurationMarker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="H" />

            <TextView
                android:id="@+id/min_textview"
                style="@style/DurationNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00" />

            <TextView
                style="@style/DurationMarker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="M" />
        </LinearLayout>

        <ImageView
            android:id="@+id/delete_imageview"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/ic_delete" />
    </LinearLayout>

    <!-- keypad -->

    <LinearLayout
        android:id="@+id/keypad_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/numbers_layout"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <View
            style="@style/WorkorderDetail_Separator"
            android:layout_width="match_parent"
            android:layout_height="2dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/button1"
                style="@style/DurationNumberPad"
                android:tag="1"
                android:text="1" />

            <Button
                android:id="@+id/button2"
                style="@style/DurationNumberPad"
                android:tag="2"
                android:text="2" />

            <Button
                android:id="@+id/button3"
                style="@style/DurationNumberPad"
                android:tag="3"
                android:text="3" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/button4"
                style="@style/DurationNumberPad"
                android:tag="4"
                android:text="4" />

            <Button
                android:id="@+id/button5"
                style="@style/DurationNumberPad"
                android:tag="5"
                android:text="5" />

            <Button
                android:id="@+id/button6"
                style="@style/DurationNumberPad"
                android:tag="6"
                android:text="6" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/button7"
                style="@style/DurationNumberPad"
                android:tag="7"
                android:text="7" />

            <Button
                android:id="@+id/button8"
                style="@style/DurationNumberPad"
                android:tag="8"
                android:text="8" />

            <Button
                android:id="@+id/button9"
                style="@style/DurationNumberPad"
                android:tag="9"
                android:text="9" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <View style="@style/DurationNumberPadSpacer" />

            <Button
                android:id="@+id/button0"
                style="@style/DurationNumberPad"
                android:tag="0"
                android:text="0" />

            <View style="@style/DurationNumberPadSpacer" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/control_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/keypad_layout"
        android:orientation="vertical" >

        <View
            style="@style/WorkorderDetail_Separator"
            android:layout_width="match_parent"
            android:layout_height="2dp" />

        <!-- finish -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/cancel_button"
                style="@style/ButtonWhite"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_gravity="right"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:text="@string/cancel" />

            <Button
                android:id="@+id/ok_button"
                style="@style/ButtonWhite"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_gravity="right"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:text="@string/save" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>