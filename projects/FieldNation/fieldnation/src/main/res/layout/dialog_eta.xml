<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    style="?attr/dialogStyle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/dialogActionBarPadding">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dialogBg_Material">

        <RelativeLayout
            android:id="@+id/headerLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/dialogBg_Material">

            <View
                android:id="@+id/dividerBackground"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="8dp"
                android:background="@color/btn_status_green_top" />

            <TextView
                android:id="@+id/title_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/ok_button"
                android:layout_centerHorizontal="true"
                android:paddingRight="25dp"
                android:text="Request 123456789"
                android:textColor="@color/white"
                android:textSize="16dp" />


            <com.fieldnation.ui.IconFontButton
                android:id="@+id/cancel_button"
                style="@style/Text_Body_1"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="16dp"
                android:layout_marginRight="3dp"
                android:background="@android:color/transparent"
                android:paddingLeft="8dp"
                android:text="@string/icon_x"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="normal" />

            <Button
                android:id="@+id/ok_button"
                style="?attr/dialogOkButtonStyle"
                android:layout_alignParentRight="true"
                android:enabled="true"
                android:text="@string/btn_confirm"
                android:textColor="@color/white"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/requestLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/headerLayout"
            android:background="@color/dialogBg_Material"
            android:visibility="gone">


            <TextView
                android:id="@+id/requestExpire_textview"
                style="@style/Text_Body_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:paddingLeft="@dimen/dialogGutter"
                android:paddingRight="@dimen/dialogGutter"
                android:text="@string/when_does_this_request_expire" />

            <Button
                android:id="@+id/expiration_button"
                style="@style/SpinnerButton"
                android:layout_below="@+id/requestExpire_textview"
                android:paddingLeft="@dimen/dialogGutter"
                android:paddingRight="@dimen/dialogGutter"
                android:text="@string/btn_never" />

            <View
                android:id="@+id/divider"
                style="@style/DividerSpinnerFull"
                android:layout_below="@+id/expiration_button"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:background="@color/fn_material_spinner_bottom_line" />
        </RelativeLayout>
    </RelativeLayout>

</ScrollView>