<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    style="?attr/dialogStyle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/dialogActionBarPadding">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dialogBg_Material">

        <RelativeLayout
            android:id="@+id/header_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/dialogBg_Material">

            <View
                android:id="@+id/dividerBackground"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="8dp"
                android:background="@color/btn_status_green_top" />

            <TextView
                android:id="@+id/title_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/ok_button"
                android:layout_centerHorizontal="true"
                android:paddingRight="25dp"
                android:text="Request 123456789"
                android:textColor="@color/white"
                android:textSize="16dp" />


            <com.fieldnation.ui.IconFontButton
                android:id="@+id/cancel_button"
                style="@style/Text_Body_1"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="16dp"
                android:layout_marginRight="3dp"
                android:background="@android:color/transparent"
                android:paddingLeft="8dp"
                android:text="@string/icon_x"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="normal" />

            <Button
                android:id="@+id/ok_button"
                style="?attr/dialogOkButtonStyle"
                android:layout_alignParentRight="true"
                android:enabled="true"
                android:text="@string/btn_confirm"
                android:textColor="@color/white"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/request_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/header_layout"
            android:background="@color/dialogBg_Material"
            android:paddingLeft="@dimen/dialogGutter"
            android:paddingRight="@dimen/dialogGutter"
            android:visibility="gone">


            <TextView
                android:id="@+id/requestExpire_textview"
                style="@style/Text_Body_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="@string/when_does_this_request_expire" />

            <Button
                android:id="@+id/expiration_button"
                style="@style/SpinnerButton"
                android:layout_below="@+id/requestExpire_textview"
                android:text="@string/btn_never" />

            <View
                android:id="@+id/divider"
                style="@style/DividerSpinnerFull"
                android:layout_below="@+id/expiration_button"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:background="@color/fn_material_spinner_bottom_line" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/confirm_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/request_layout"
            android:background="@color/dialogBg_Material"
            android:paddingLeft="@dimen/dialogGutter"
            android:paddingRight="@dimen/dialogGutter"
            android:visibility="visible">

            <RelativeLayout
                android:id="@+id/startDate_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/dialogBg_Material">

                <TextView
                    android:id="@+id/arrivalTime_textview"
                    style="@style/Text_Caption"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="4dp"
                    android:text="@string/arrival_time" />

                <Button
                    android:id="@+id/startDate_button"
                    style="@style/SpinnerButton"
                    android:layout_below="@+id/arrivalTime_textview"
                    android:text="@string/placeholder_date_long" />

                <View
                    android:id="@+id/startDate_divider"
                    style="@style/DividerSpinnerFull"
                    android:layout_below="@+id/startDate_button"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:background="@color/fn_material_spinner_bottom_line" />

            </RelativeLayout>

            <TextView
                android:id="@+id/schedule_textview"
                style="?attr/dialogCaptionStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/startDate_layout"
                android:layout_marginBottom="16dp"
                android:text="Arrival time must be between\n\tTuesday, March 4, 2014 at 11:00 am and \n\tTuesday, March 4, 2014 at 11:00 am CST" />


            <TextView
                android:id="@+id/jobDuration_textview"
                style="@style/Text_Caption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/schedule_textview"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="4dp"
                android:text="@string/job_duration" />

            <Button
                android:id="@+id/duration_button"
                style="@style/SpinnerButton"
                android:layout_below="@+id/jobDuration_textview"
                android:text="@string/placeholder_word" />

            <View
                android:id="@+id/duration_divider"
                style="@style/DividerSpinnerFull"
                android:layout_below="@+id/duration_button"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:background="@color/fn_material_spinner_bottom_line" />


            <CheckBox
                android:id="@+id/tac_checkbox"
                style="?attr/tileCheckBoxStyle"
                android:layout_width="wrap_content"
                android:layout_below="@+id/duration_divider"
                android:text="@string/i_accept" />

            <Button
                android:id="@+id/tac_button"
                style="?attr/buttonFlatStyle"
                android:layout_below="@+id/duration_divider"
                android:layout_toRightOf="@+id/tac_checkbox"
                android:gravity="left|center_vertical"
                android:maxLines="1"
                android:text="@string/terms_and_conditions" />


        </RelativeLayout>


    </RelativeLayout>

</ScrollView>