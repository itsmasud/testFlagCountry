<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">

    <LinearLayout
        style="@style/Dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            style="@style/Dialog_Container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/Dialog_Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Expense" />

            <TextView
                style="@style/Dialog_Label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expense Description" />

            <EditText
                android:id="@+id/description_edittext"
                style="@style/Dialog_EditText"
                android:layout_width="fill_parent"
                android:layout_marginBottom="@dimen/Dialog_Content_Padding"
                android:imeOptions="actionNext"
                android:inputType="text" />

            <TextView
                style="@style/Dialog_Label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price" />

            <EditText
                android:id="@+id/amount_edittext"
                style="@style/Dialog_EditText"
                android:layout_width="fill_parent"
                android:layout_marginBottom="@dimen/Dialog_Content_Padding"
                android:imeOptions="actionNext"
                android:inputType="numberDecimal" />

            <TextView
                style="@style/Dialog_Label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category" />

            <Spinner
                android:id="@+id/category_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/actionbar_view"
            style="@style/Dialog_ActionBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/cancel_button"
                style="@style/Dialog_Cancel_Button"
                android:text="@string/cancel" />

            <Button
                android:id="@+id/ok_button"
                style="@style/Dialog_Ok_Button"
                android:text="@string/save" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
