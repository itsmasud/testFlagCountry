<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title_textview"
        style="?attr/dialogTitleStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dialogGutter_Material"
        android:layout_marginRight="@dimen/dialogGutter_Material"
        android:layout_marginTop="@dimen/dialogGutter_Material" />

    <ListView
        android:id="@+id/apps_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_textview"
        android:layout_marginBottom="@dimen/dialogGutter_Material"
        android:paddingLeft="@dimen/dialogGutter_Material"
        android:paddingRight="@dimen/dialogGutter_Material" />

</RelativeLayout>
