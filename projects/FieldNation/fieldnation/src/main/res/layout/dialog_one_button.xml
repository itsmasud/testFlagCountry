<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    style="?attr/dialogStyle"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            style="?attr/dialogContainerStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_textview"
                style="?attr/dialogTitleStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/terms_and_conditions" />

            <TextView
                android:id="@+id/body_textview"
                style="?attr/dialogBodyStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp">

            <Button
                android:id="@+id/prev_button"
                style="?attr/buttonFlatStyle"
                android:text="Prev" />

            <Button
                android:id="@+id/next_button"
                style="?attr/buttonFlatStyle"
                android:layout_alignParentRight="true"
                android:text="Next" />

        </RelativeLayout>

        <LinearLayout style="?attr/dialogActionBarStyle">

            <Button
                android:id="@+id/button"
                style="?attr/dialogOkButtonStyle"
                android:text="@string/btn_ok" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>