<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Dialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        style="@style/Dialog_Container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/Dialog_Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Change Pay" />

        <TextView
            style="@style/Dialog_Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pay_rate_basis" />

        <Spinner
            android:id="@+id/type_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/Dialog_Content_Padding" />

        <!-- fixed pay -->

        <LinearLayout
            android:id="@+id/fixed_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                style="@style/Dialog_Label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fixed_pay_amount" />

            <EditText
                android:id="@+id/fixed_edittext"
                style="@style/Dialog_EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionDone"
                android:inputType="numberDecimal" />
        </LinearLayout>

        <!-- hourly -->

        <LinearLayout
            android:id="@+id/hourly_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                style="@style/Dialog_Label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="@string/hourly_rate" />

            <EditText
                android:id="@+id/hourlyrate_edittext"
                style="@style/Dialog_EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionNext"
                android:inputType="numberDecimal"
                android:minEms="4" />

            <TextView
                style="@style/Dialog_Label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/max_hours" />

            <EditText
                android:id="@+id/maxhours_edittext"
                style="@style/Dialog_EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionDone"
                android:inputType="numberDecimal" />
        </LinearLayout>

        <!-- per device -->

        <LinearLayout
            android:id="@+id/devices_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                style="@style/Dialog_Label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/per_device_rate" />

            <EditText
                android:id="@+id/devicerate_edittext"
                style="@style/Dialog_EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionNext"
                android:inputType="numberDecimal" />

            <TextView
                style="@style/Dialog_Label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/max_devices" />

            <EditText
                android:id="@+id/maxdevices_edittext"
                style="@style/Dialog_EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionDone"
                android:inputType="numberDecimal" />
        </LinearLayout>

        <!-- blended -->

        <LinearLayout
            android:id="@+id/blended_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                style="@style/Dialog_Label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hourly_rate" />

            <LinearLayout
                android:layout_marginBottom="@dimen/Dialog_Content_Padding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/blendedhourlyrate_edittext"
                    style="@style/Dialog_EditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:imeOptions="actionNext"
                    android:inputType="numberDecimal" />

                <TextView
                    style="@style/Dialog_Caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:text="for the first" />

                <EditText
                    android:id="@+id/blendedmaxhours_edittext"
                    style="@style/Dialog_EditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:imeOptions="actionNext"
                    android:inputType="numberDecimal" />
            </LinearLayout>

            <TextView
                style="@style/Dialog_Label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hourly_rate" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/extrahours_edittext"
                    style="@style/Dialog_EditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:imeOptions="actionNext"
                    android:inputType="numberDecimal" />

                <TextView
                    style="@style/Dialog_Caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:text="for up to" />

                <EditText
                    android:id="@+id/extramaxhours_edittext"
                    style="@style/Dialog_EditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:imeOptions="actionDone"
                    android:inputType="numberDecimal" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        style="@style/Dialog_ActionBar"
        android:layout_marginTop="@dimen/Dialog_ActionBar_Padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cancel_button"
            style="@style/Dialog_Cancel_Button"
            android:text="@string/cancel" />

        <Button
            android:id="@+id/ok_button"
            style="@style/Dialog_Ok_Button"
            android:text="@string/save" />
    </LinearLayout>

</LinearLayout>