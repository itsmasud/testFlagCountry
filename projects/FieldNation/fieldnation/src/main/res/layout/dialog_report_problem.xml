<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="?attr/dialogContainerStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/dialogBg_Material">

    <TextView
        android:id="@+id/title_textview"
        style="?attr/dialogTitleStyle"
        android:text="There's a problem" />

    <Spinner
        android:id="@+id/problem1_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_textview"
        android:text="What\'s the problem?" />

    <View
        android:id="@+id/problem1_divider"
        style="@style/DividerFull"
        android:layout_below="@id/problem1_spinner"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:background="@color/fn_dark_text_80" />

    <Spinner
        android:id="@+id/problem2_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/problem1_divider"
        android:text="What\'s the problem?" />

    <View
        android:id="@+id/problem2_divider"
        style="@style/DividerFull"
        android:layout_below="@id/problem2_spinner"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:background="@color/fn_dark_text_80" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/explanation_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/problem2_divider"
        android:layout_marginBottom="16dp">

        <EditText
            android:id="@+id/explanation_edittext"
            style="@style/EditText"
            android:hint="Provide an explanation"
            android:imeOptions="actionNext"
            android:inputType="text" />
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/note_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/explanation_layout"
        android:text="Once submitted you will be removed from this work order" />

    <Button
        android:id="@+id/cancel_button"
        style="?attr/dialogCancelButtonStyle"
        android:layout_below="@+id/note_textview"
        android:layout_toLeftOf="@+id/ok_button"
        android:text="CANCEL" />

    <Button
        android:id="@+id/ok_button"
        style="?attr/dialogOkButtonStyle"
        android:layout_alignParentRight="true"
        android:layout_below="@id/note_textview"
        android:text="CONTINUE" />
</RelativeLayout>