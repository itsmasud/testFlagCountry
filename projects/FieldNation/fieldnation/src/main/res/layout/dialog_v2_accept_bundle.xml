<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Dialog.v3"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/title_textview"
        style="@style/DialogTitle.v3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Accept Bundle" />

    <TextView
        android:id="@+id/body_textview"
        style="?attr/dialogBodyStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_textview"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:text="You are about to accept a bundle of 10 workorders" />

    <TextView
        android:id="@+id/expires_textview"
        style="@style/Text_Caption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/body_textview"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:text="Request expires" />

    <Button
        android:id="@+id/expiration_button"
        style="@style/SpinnerButton"
        android:layout_below="@+id/expires_textview"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:text="@string/btn_never" />

    <View
        android:id="@+id/divider"
        style="@style/DividerSpinnerFull"
        android:layout_below="@+id/expiration_button"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:background="@color/fn_material_spinner_bottom_line" />

    <TextView
        android:id="@+id/termswarning_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/divider"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:text="By accepting this bundle you are agreeing to our" />

    <Button
        android:id="@+id/terms_button"
        style="@style/Material.Button.Flat"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/termswarning_textview"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:text="Work Order Terms and Conditions" />

    <Button
        android:id="@+id/viewbundle_button"
        style="@style/DialogButton.v3"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/terms_button"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="VIEW BUNDLE" />

    <Button
        android:id="@+id/cancel_button"
        style="@style/DialogButton.v3"
        android:layout_below="@+id/terms_button"
        android:layout_marginRight="8dp"
        android:layout_toLeftOf="@+id/ok_button"
        android:text="@string/btn_cancel" />

    <Button
        android:id="@+id/ok_button"
        style="@style/DialogButton.v3"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/terms_button"
        android:layout_marginRight="8dp"
        android:text="@string/btn_accept" />

</RelativeLayout>