<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Dialog.v3"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/title_textview"
        style="@style/DialogTitle.v3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/report_issue" />

    <TextView
        android:id="@+id/body_textview"
        style="?attr/dialogBodyStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_textview"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:text="@string/select_the_issue_type" />

    <Button
        android:id="@+id/reschedule_button"
        style="?attr/buttonWhiteStyle"
        android:layout_width="match_parent"
        android:layout_below="@+id/body_textview"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:text="@string/request_reschedule"
        android:visibility="gone" />

    <Button
        android:id="@+id/cancelWork_button"
        style="?attr/buttonWhiteStyle"
        android:layout_width="match_parent"
        android:layout_below="@id/reschedule_button"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:text="@string/cancel_work_order" />

    <Button
        android:id="@+id/reportother_button"
        style="?attr/buttonWhiteStyle"
        android:layout_width="match_parent"
        android:layout_below="@+id/cancelWork_button"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:text="@string/report_other_issue" />

    <Button
        android:id="@+id/cancel_button"
        style="@style/DialogButton.v3"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/reportother_button"
        android:layout_marginRight="8dp"
        android:text="@string/btn_cancel" />

</RelativeLayout>