<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:scrollbarStyle="outsideOverlay"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/company_imageview"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginBottom="8dp"
            android:scaleType="fitStart"
            android:visibility="gone" />

        <TextView
            android:id="@+id/title_textview"
            style="@style/WorkorderDetail_ProjectTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upgrade ATM - US Bank" />

        <TextView
            android:id="@+id/description_textview"
            style="@style/WorkorderDetail_Field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ljksdkjf lksd jflskdfj lksdjf lasiefj sldkfsel slekjf lskl;skejf liksgfrjlsgfljkhdrfglkijhdsrfg,j.h dzfg, jh  lksg ldsfhfg lksrjgfflis jfglks hlkshjgfr kl lwrgf lisrjgf,lkrsngloidsghewl lk" />

        <View
            android:id="@+id/time_divider"
            style="@style/WorkorderDetail_Separator"
            android:layout_width="match_parent" />

        <TextView
            android:id="@+id/time_textview"
            style="@style/WorkorderDetail_FieldTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Time Logged" />

        <LinearLayout
            android:id="@+id/time_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <View
            android:id="@+id/tasks_divider"
            style="@style/WorkorderDetail_Separator"
            android:layout_width="match_parent" />

        <TextView
            android:id="@+id/tasks_textview"
            style="@style/WorkorderDetail_FieldTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tasks" />

        <LinearLayout
            android:id="@+id/tasks_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />


        <Button
            android:id="@+id/signoff_button"
            style="@style/ButtonOrangeMaterial"
            android:layout_width="150dp"
            android:layout_gravity="right"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:text="SIGN OFF" />
    </LinearLayout>
</ScrollView>
