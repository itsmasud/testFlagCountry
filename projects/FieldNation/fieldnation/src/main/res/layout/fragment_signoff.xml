<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:background="#FF000000"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            android:layout_centerVertical="true"
            style="@style/Text_Headline"
            android:textColor="#FFFFFFFF"
            android:alpha="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Review &amp; Sign" />

        <RelativeLayout
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="120dp"
            android:layout_height="wrap_content">

            <View
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_marginTop="7dp"
                android:background="#FFFFFFFF"
                android:layout_alignLeft="@+id/circles_layout"
                android:layout_alignRight="@+id/circles_layout"
                android:layout_width="0dp"
                android:layout_height="2dp" />

            <LinearLayout
                android:id="@+id/circles_layout"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:layout_marginRight="8dp">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_review_circle_green" />

                    <TextView
                        style="@style/Text_Caption"
                        android:textSize="10dp"
                        android:alpha="1"
                        android:textColor="#FFFFFFFF"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Review" />
                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_review_circle_white" />

                    <TextView
                        style="@style/Text_Caption"
                        android:textSize="10dp"
                        android:alpha="1"
                        android:textColor="#FFFFFFFF"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sign" />
                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_review_circle_white" />

                    <TextView
                        style="@style/Text_Caption"
                        android:alpha="1"
                        android:textSize="10dp"
                        android:textColor="#FFFFFFFF"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Done" />
                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:scrollbarStyle="outsideOverlay"
        android:padding="10dp">

        <LinearLayout
            android:id="@+id/container"
            android:background="#FFeeeeee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/company_imageview"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginBottom="8dp"
                android:scaleType="fitStart"
                android:visibility="gone" />

            <TextView
                android:id="@+id/title_textview"
                style="@style/WorkorderDetail_ProjectTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Upgrade ATM - US Bank" />

            <TextView
                android:id="@+id/description_textview"
                style="@style/WorkorderDetail_Field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ljksdkjf lksd jflskdfj lksdjf lasiefj sldkfsel slekjf lskl;skejf liksgfrjlsgfljkhdrfglkijhdsrfg,j.h dzfg, jh  lksg ldsfhfg lksrjgfflis jfglks hlkshjgfr kl lwrgf lisrjgf,lkrsngloidsghewl lk" />

            <View
                android:id="@+id/time_divider"
                style="@style/WorkorderDetail_Separator"
                android:layout_width="match_parent" />

            <TextView
                android:id="@+id/time_textview"
                style="@style/WorkorderDetail_FieldTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Time Logged" />

            <LinearLayout
                android:id="@+id/time_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <View
                android:id="@+id/tasks_divider"
                style="@style/WorkorderDetail_Separator"
                android:layout_width="match_parent" />

            <TextView
                android:id="@+id/tasks_textview"
                style="@style/WorkorderDetail_FieldTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tasks" />

            <LinearLayout
                android:id="@+id/tasks_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <View
                android:id="@+id/closingnotes_divider"
                style="@style/WorkorderDetail_Separator"
                android:layout_width="match_parent" />

            <TextView
                android:id="@+id/closingnoteslabel_textview"
                style="@style/WorkorderDetail_FieldTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/closing_notes" />

            <TextView
                android:id="@+id/closingnotes_textview"
                style="@style/WorkorderDetail_Field"
                android:layout_height="wrap_content"
                android:layout_width="match_parent" />


            <Button
                android:id="@+id/signoff_button"
                style="@style/ButtonOrangeMaterial"
                android:layout_width="150dp"
                android:layout_gravity="right"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:text="SIGN OFF" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>