<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:orientation="horizontal">

    <Button
        android:id="@+id/checkin_button"
        style="?attr/buttonWhiteStyle"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_weight="1"
        android:text="@string/btn_check_in"
        android:visibility="gone" />

    <Button
        android:id="@+id/checkout_button"
        style="?attr/buttonGreenStyle"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_weight="1"
        android:text="@string/btn_check_out"
        android:visibility="gone" />

    <Button
        android:id="@+id/acknowledge_button"
        style="?attr/buttonOrangeStyle"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_weight="1"
        android:text="@string/btn_acknowledge_hold"
        android:visibility="gone" />

    <Button
        android:id="@+id/complete_button"
        style="?attr/buttonOrangeStyle"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_weight="1"
        android:text="@string/btn_mark_completed"
        android:visibility="gone" />

    <Button
        android:id="@+id/incomplete_button"
        style="?attr/buttonOrangeStyle"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_weight="1"
        android:text="@string/btn_mark_incompleted"
        android:visibility="gone" />

    <Button
        android:id="@+id/closingnotes_button"
        style="?attr/buttonOrangeStyle"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_weight="1"
        android:text="@string/btn_closing_notes"
        android:visibility="gone" />

    <Button
        android:id="@+id/confirm_button"
        style="?attr/buttonGreenStyle"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_weight="1"
        android:text="@string/btn_confirm"
        android:visibility="gone" />

</LinearLayout>