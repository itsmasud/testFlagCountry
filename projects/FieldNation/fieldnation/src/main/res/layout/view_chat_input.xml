<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View style="@style/DividerFull" />

    <EditText
        android:id="@+id/message_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/send_button"
        android:hint="@string/type_a_message"
        android:minLines="1"
        android:paddingLeft="16dp"
        android:textColor="@color/fn_dark_text"
        android:textColorHint="@color/fn_light_text_statefull"
        android:theme="@style/Theme.AppCompat.NoActionBar" />

    <com.fieldnation.ui.IconFontButton
        android:id="@+id/send_button"
        style="?attr/buttonFlatStyle"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="@string/icon_send_solid"
        android:textColor="@color/fn_primary_dark"
        android:textSize="26sp" />

</RelativeLayout>
