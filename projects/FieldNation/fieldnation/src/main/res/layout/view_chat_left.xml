<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.fieldnation.ui.ProfilePicView
        android:id="@+id/pic_view"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/message_textview"
        android:layout_marginLeft="8dp" />

    <TextView
        android:id="@+id/message_textview"
        style="@style/ChatTextLeft"
        android:background="@drawable/chat_left_full"
        android:text="@string/placeholder_paragraph" />

    <TextView
        android:id="@+id/time_textview"
        style="@style/Text_Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/message_textview"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="4dp"
        android:text="00:00:AM" />
</RelativeLayout>