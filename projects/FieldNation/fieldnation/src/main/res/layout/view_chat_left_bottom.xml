<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.fieldnation.ui.ProfilePicView
        android:id="@+id/pic_view"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignBottom="@+id/message_textview"
        android:layout_marginRight="8dp" />

    <TextView
        android:id="@+id/message_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/pic_view"
        android:background="@drawable/message_left_bottom"
        android:paddingBottom="10dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="10dp"
        android:text="@string/placeholder_paragraph"
        android:textColor="#FFFFFFFF" />

</RelativeLayout>