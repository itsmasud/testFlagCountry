<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fn_primary_bg">

    <TextView
        android:id="@+id/offer_expire_title_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="@string/offer_expires"
        android:textColor="@color/fn_dark_text_50"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/offer_expire_title_textview"
        android:background="@color/fn_clickable_bg">

        <com.fieldnation.ui.HintSpinner
            android:id="@+id/expire_duration_spinner"
            style="@style/Widget.AppCompat.Spinner.Underlined"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="0dp"
            android:hint="NEVER"
            android:visibility="visible" />

        <EditText
            android:id="@+id/request_reason_edittext"
            style="@style/EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/expire_duration_spinner"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:hint="@string/reason_for_request"
            android:imeOptions="actionDone"
            android:inputType="textMultiLine|textCapSentences|textAutoCorrect"
            android:padding="16dp"
            android:textColor="@color/fn_dark_text_50" />

        <TextView
            android:id="@+id/disclaimer_textview"
            style="?attr/tileTextStatusStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/request_reason_edittext"
            android:padding="16dp"
            android:text="@string/disclaimer_to_counter_offer" />
    </RelativeLayout>
</RelativeLayout>
