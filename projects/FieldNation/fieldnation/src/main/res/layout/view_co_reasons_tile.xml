<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container_view"
    style="?attr/tileContainerStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        style="?attr/tileTextTitleStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/tileContentPadding"
        android:text="@string/reason_for_counter_offer" />

    <TextView
        android:id="@+id/body_textview"
        style="?attr/tileTextStatusStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/schedule_textview"
        android:text="@string/disclaimer_to_counter_offer" />

    <EditText
        android:id="@+id/request_reason_edittext"
        style="@style/EditText"
        android:layout_height="wrap_content"
        android:hint="@string/reason_for_request"
        android:inputType="textMultiLine"
        android:scrollHorizontally="false" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/expires_checkbox"
            style="?attr/tileCheckBoxStyle"
            android:layout_width="wrap_content"
            android:text="@string/offer_expires"
            android:visibility="visible" />

        <com.fieldnation.ui.HintSpinner
            android:id="@+id/expire_duration_spinner"
            style="@style/Widget.AppCompat.Spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:hint="30 mins"
            android:visibility="visible" />
    </LinearLayout>

    <TextView
        android:id="@+id/termswarning_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="16dp"
        android:text="By countering this work order you are agreeing to our Work Order Terms and Conditions" />

</LinearLayout>