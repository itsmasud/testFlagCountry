<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <ScrollView
        style="@style/Drawer"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">

                <LinearLayout
                    android:id="@+id/profile_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/profileexpand_button"
                    android:orientation="horizontal"
                    android:paddingBottom="32dp"
                    android:paddingLeft="16dp"
                    android:paddingTop="32dp">

                    <ImageView
                        android:id="@+id/profile_imageview"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/missing_circle" />

                    <LinearLayout
                        android:id="@+id/profile_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="16dp"
                        android:layout_toRightOf="@+id/profile_imageview"
                        android:orientation="vertical">

                        <TextView
                            style="@style/Text_Title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Firstname Lastname" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Company Name" />

                        <TextView
                            android:id="@+id/providerid_textview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Provider Id: 12354654" />

                    </LinearLayout>
                </LinearLayout>

                <ImageButton
                    android:id="@+id/profileexpand_button"
                    style="?attr/buttonFlatStyle"
                    android:layout_width="48dp"
                    android:layout_height="match_parent"
                    android:layout_alignBottom="@+id/profile_container"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/profile_container"
                    android:layout_marginRight="16dp"
                    android:src="@drawable/ic_nav_arrow" />
            </RelativeLayout>

            <View
                style="@style/DrawerSeparator"
                android:layout_width="fill_parent"
                android:layout_height="2px" />


            <!-- Work orders -->

            <RelativeLayout
                android:id="@+id/mywork_view"
                style="@style/DrawerItem">

                <ImageView
                    android:id="@+id/mywork_imageview"
                    style="@style/DrawerItemIcon"
                    android:src="@drawable/ic_nav_myworkorders" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/mywork_imageview"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/mywork_title_textView"
                        style="@style/DrawerItemTitle"
                        android:text="@string/mywork_title" />

                    <TextView
                        android:id="@+id/workorder_subtext_textview"
                        style="@style/DrawerItemSubtitle"
                        android:text="@string/mywork_subtitle" />
                </LinearLayout>
            </RelativeLayout>

            <!-- Market -->

            <RelativeLayout
                android:id="@+id/market_view"
                style="@style/DrawerItem">

                <ImageView
                    android:id="@+id/market_imageview"
                    style="@style/DrawerItemIcon"
                    android:src="@drawable/ic_nav_marketplace" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/market_imageview"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/market_title_textview"
                        style="@style/DrawerItemTitle"
                        android:text="@string/market_title" />

                    <TextView
                        android:id="@+id/market_subtext_textview"
                        style="@style/DrawerItemSubtitle"
                        android:text="@string/market_subtitle" />
                </LinearLayout>
            </RelativeLayout>

            <!-- Payment -->

            <RelativeLayout
                android:id="@+id/payment_view"
                style="@style/DrawerItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/payment_imageview"
                    style="@style/DrawerItemIcon"
                    android:src="@drawable/ic_nav_payment" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/payment_imageview"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/payment_title_textview"
                        style="@style/DrawerItemTitle"
                        android:text="@string/payment_title" />

                    <TextView
                        style="@style/DrawerItemSubtitle"
                        android:id="@+id/payment_subtext_textview"
                        android:text="@string/payment_subtitle" />

                    <RelativeLayout
                        android:id="@+id/estimated_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="8dp"
                        android:visibility="visible">

                        <TextView
                            android:id="@+id/estimateddate_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:text="Pending"
                            android:textAppearance="?android:attr/textAppearanceSmall" />

                        <TextView
                            android:id="@+id/estimatedamount_textview"
                            style="@style/DrawerEsitmatedAmount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_gravity="right"
                            android:text="$2,500" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/paid_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="8dp"
                        android:paddingTop="8dp"
                        android:visibility="visible">

                        <TextView
                            android:id="@+id/paiddate_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:text="Paid 5/20/14"
                            android:textAppearance="?android:attr/textAppearanceSmall" />

                        <TextView
                            android:id="@+id/paidamount_textview"
                            style="@style/DrawerPaidAmount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_gravity="right"
                            android:text="$2,500" />
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>

            <View
                style="@style/DrawerSeparator"
                android:layout_marginBottom="16dp" />

            <!-- Settings -->

            <LinearLayout
                style="@style/DrawerSubitem"
                android:orientation="horizontal">

                <ImageView
                    style="@style/DrawerItemIcon"
                    android:src="@drawable/ic_nav_settings" />

                <TextView
                    style="@style/DrawerSubitemTitle"
                    android:text="Settings" />
            </LinearLayout>

            <!-- Feedback -->

            <LinearLayout
                style="@style/DrawerSubitem"
                android:orientation="horizontal">

                <ImageView
                    style="@style/DrawerItemIcon"
                    android:src="@drawable/ic_nav_feedback" />

                <TextView
                    style="@style/DrawerSubitemTitle"
                    android:text="Feedback" />
            </LinearLayout>

            <!-- Help -->

            <LinearLayout
                style="@style/DrawerSubitem"
                android:orientation="horizontal">

                <ImageView
                    style="@style/DrawerItemIcon"
                    android:src="@drawable/ic_nav_help" />

                <TextView
                    style="@style/DrawerSubitemTitle"
                    android:text="Help" />
            </LinearLayout>

            <!-- Logout -->

            <LinearLayout
                android:id="@+id/logout_view"
                style="@style/DrawerSubitem"
                android:orientation="horizontal">

                <ImageView
                    style="@style/DrawerItemIcon"
                    android:src="@drawable/ic_nav_logout" />

                <TextView
                    style="@style/DrawerSubitemTitle"
                    android:text="@string/logout_title" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <TextView
        android:id="@+id/version_textview"
        style="?attr/dialogCaptionStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="garbage" />
</RelativeLayout>