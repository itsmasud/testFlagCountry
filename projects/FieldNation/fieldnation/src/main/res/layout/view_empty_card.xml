<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutCardView"
    android:padding="16dp"
    android:layout_margin="0dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/marketplaceUnavailable_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_textview"
            style="@style/Text_Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:textStyle="bold"
            android:text="No Assigned Work Orders" />

        <TextView
            android:id="@+id/caption_textview"
            style="@style/Text_Subhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:gravity="center"
            android:textSize="14sp"
            android:layout_marginBottom="20dp"
            android:textColor="@color/fn_dark_text"
            android:text="Check out what is available around you to get the ball rolling." />

        <Button
            android:id="@+id/action_button"
            style="?attr/buttonGreenStyle"
            android:text="AVAILABLE WORK ORDERS" />
    </LinearLayout>
</RelativeLayout>