<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container_empty_message"
    style="?attr/cardContainerStyle"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:padding="16dp"
    android:visibility="visible">

    <TextView
        android:id="@+id/header_one"
        style="@style/Text_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="@string/activity_message_list_empty_message_headline" />

    <TextView
        android:id="@+id/header_two"
        style="@style/Text_Body_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header_one"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="4dp"
        android:text="@string/activity_message_list_empty_message_sub_headline" />

</RelativeLayout>
