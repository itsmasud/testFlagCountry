<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="?attr/tileStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:id="@+id/time_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true">

        <TextView
            android:id="@+id/timebold_textview"
            style="@style/Text_Body_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:maxLines="1"
            android:text="@string/placeholder_word"
            android:textColor="@color/fn_brandcolor"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/time_textview"
            style="@style/Text_Body_1_Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:maxLines="1"
            android:text="@string/placeholder_word"
            android:visibility="visible" />

    </RelativeLayout>


    <TextView
        android:id="@+id/title_textview"
        style="@style/Text_Subhead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:layout_toLeftOf="@+id/time_layout"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/placeholder_paragraph" />


    <TextView
        android:id="@+id/workorder_textview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/title_textview"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:text="WO 1234456789" />

    <TextView
        android:id="@+id/messagebody_textview"
        style="@style/Text_Body_1_Caption"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/workorder_textview"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="@string/placeholder_paragraph"
        android:textColorLink="@color/fn_clickable_text" />

    <View
        style="?attr/tileDividerStyle"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/messagebody_textview"
        android:layout_marginLeft="16dp" />

</RelativeLayout>