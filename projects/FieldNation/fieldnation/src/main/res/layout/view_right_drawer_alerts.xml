<?xml version="1.0" encoding="utf-8"?>
<com.fieldnation.ui.RightDrawerView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawerView"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- body -->
    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null" />

    <!-- toolbar -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.fieldnation.ui.IconFontButton
            android:id="@+id/close_button"
            style="?attr/buttonFlatStyle"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:text="@string/icfont_missing"
            android:textColor="@color/fn_light_text"
            android:textSize="24sp" />

        <TextView
            style="@style/Text_Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/close_button"
            android:text="Notifications" />
    </RelativeLayout>

</com.fieldnation.ui.RightDrawerView>