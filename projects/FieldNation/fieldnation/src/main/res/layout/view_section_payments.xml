<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.fieldnation.v2.ui.workorder.WodHeader
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Payments" />

    <com.fieldnation.ui.workorder.detail.PaymentView
        android:id="@+id/payment_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <com.fieldnation.v2.ui.workorder.TimeLogSummaryView
        android:id="@+id/timelogSummary_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <com.fieldnation.ui.workorder.detail.CounterOfferSummaryView
        android:id="@+id/counterOfferSummary_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <com.fieldnation.v2.ui.workorder.ExpensesSummaryView
        android:id="@+id/expensesSummaryView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <com.fieldnation.v2.ui.workorder.DiscountSummaryView
        android:id="@+id/discountSummaryView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <com.fieldnation.ui.workorder.detail.ExpectedPaymentView
        android:id="@+id/expected_pay_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>