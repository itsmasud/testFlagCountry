<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/thumb_signatureview"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/ic_file_grey" />

        <LinearLayout
            android:layout_toRightOf="@+id/thumb_signatureview"
            android:layout_centerVertical="true"
            android:id="@+id/info_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name_textview"
                style="@style/WorkorderDetail_Field"
                android:padding="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Signee Name" />

            <TextView
                style="@style/WorkorderDetail_Field_Gray"
                android:id="@+id/date_textview"
                android:padding="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="January 10, 2014" />

        </LinearLayout>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        style="@style/WorkorderDetail_Separator" />
</LinearLayout>