<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutCardView"
    style="?attr/cardContainerStyle"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/marketplaceUnavailable_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_textview"
            style="@style/Text_Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Marketplace suspension" />

        <TextView
            android:id="@+id/caption_textview"
            style="@style/Text_Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="You are in offline mode" />

        <Button
            android:id="@+id/action_button"
            style="?attr/buttonWhiteStyle"
            android:text="RECONNECT" />
    </LinearLayout>
</RelativeLayout>