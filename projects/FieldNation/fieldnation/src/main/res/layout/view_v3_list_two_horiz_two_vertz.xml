<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/tileBackGroundColor">

    <TextView
        android:id="@+id/keyTitle_textview"
        style="@style/Text_Subhead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/valueTitle_textview"
        android:paddingLeft="@dimen/tileContentPadding"
        android:paddingTop="@dimen/tileContentPadding"
        android:textStyle="bold"
        android:text="Key Title" />

    <TextView
        android:id="@+id/valueTitle_textview"
        style="@style/Text_Body_1_Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:paddingRight="@dimen/tileContentPadding"
        android:paddingTop="@dimen/tileContentPadding"
        android:textSize="16sp"
        android:text="Value title" />

    <TextView
        android:id="@+id/keyDescription_textview"
        style="@style/Text_Body_1_Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/keyTitle_textview"
        android:paddingLeft="@dimen/tileContentPadding"
        android:text="Key Description"
        android:layout_alignLeft="@+id/keyTitle_textview"
        android:layout_toLeftOf="@+id/valueDescription_textview"
        android:paddingBottom="@dimen/tileContentPadding"
        android:visibility="visible" />

    <TextView
        android:id="@+id/valueDescription_textview"
        style="@style/Text_Body_1_Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/valueTitle_textview"
        android:paddingLeft="@dimen/tileContentPadding"
        android:paddingRight="@dimen/tileContentPadding"
        android:paddingBottom="@dimen/tileContentPadding"
        android:text="value description"
        android:visibility="visible" />

    <View
        style="@style/DividerFull"
        android:layout_below="@+id/keyDescription_textview" />
</RelativeLayout>