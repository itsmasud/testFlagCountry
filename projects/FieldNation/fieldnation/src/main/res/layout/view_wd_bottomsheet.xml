<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <View
        android:id="@+id/bottomSheet_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/fn_shadow"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/bottomsheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/fn_clickable_bg"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:visibility="visible">

        <TextView
            android:id="@+id/addCounterOffer_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Counter Offer" />

        <View style="@style/DividerFull" />

        <TextView
            android:id="@+id/addRequestNewPay_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Request New Pay" />

        <View style="@style/DividerFull" />

        <TextView
            android:id="@+id/addTimeLog_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Time Log" />

        <View style="@style/DividerFull" />

        <TextView
            android:id="@+id/addExpense_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Expense" />

        <View style="@style/DividerFull" />

        <TextView
            android:id="@+id/addDiscount_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Discount" />

        <View style="@style/DividerFull" />

        <TextView
            android:id="@+id/addSignature_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Signature" />

        <View style="@style/DividerFull" />

        <TextView
            android:id="@+id/addShipment_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Shipment" />

        <View style="@style/DividerFull" />

        <TextView
            android:id="@+id/addAttachment_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Attach File" />

    </LinearLayout>

</RelativeLayout>