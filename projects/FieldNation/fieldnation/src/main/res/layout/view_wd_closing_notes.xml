<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/fn_clickable_bg"
    android:paddingTop="16dp">

    <TextView
        android:id="@+id/title_textview"
        style="@style/Text_Subhead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:text="@string/closing_notes"
        android:textColor="@color/fn_dark_text" />

    <TextView
        android:id="@+id/notes_textview"
        style="@style/Text_Body_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_textview"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="@string/placeholder_paragraph"
        android:textColor="@color/fn_light_text"
        android:visibility="visible" />

    <View
        style="@style/DividerFull"
        android:layout_below="@+id/notes_textview"
        android:layout_marginTop="16dp" />

</RelativeLayout>