<?xml version="1.0" encoding="utf-8"?>
<com.fieldnation.ui.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.fieldnation.ui.IconFontTextView
            android:id="@+id/filetype_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:text="@string/icfont_file_none"
            android:textColor="@color/fn_light_text"
            android:textSize="48sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/filetype_imageview"
            android:orientation="vertical">

            <TextView
                android:id="@+id/filename_textview"
                style="@style/Text_Subhead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="middle"
                android:maxLines="1"
                android:singleLine="true"
                android:text="File Name.ext"
                android:textColor="@color/fn_dark_text" />

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:indeterminate="true"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/username_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/date_textview"
                    style="@style/Text_Caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dec 25, 2014 at 12:00 am" />

                <TextView
                    android:id="@+id/by_textview"
                    style="@style/Text_Caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:text="@string/by" />

                <TextView
                    android:id="@+id/username_textview"
                    style="@style/Text_Caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kevin Mccalister" />
            </LinearLayout>

            <TextView
                android:id="@+id/status_textview"
                style="@style/Text_Caption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Uploading..."
                android:visibility="gone" />
        </LinearLayout>
    </RelativeLayout>
</com.fieldnation.ui.CardView>