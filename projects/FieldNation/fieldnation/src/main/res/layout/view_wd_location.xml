<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        style="@style/WorkorderDetail_FieldTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location Details" />

    <TextView
        android:id="@+id/address_textview"
        style="@style/WorkorderDetail_Field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Location Name\n1234 Somewhere Street\nSomeplace, MN 55408" />

    <TextView
        android:id="@+id/distance_textview"
        style="@style/WorkorderDetail_Field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3.5 mi" />

    <TextView
        android:id="@+id/contactinfo_textview"
        style="@style/WorkorderDetail_Field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="First Last\nfirst.last@domain.com\n555-555-1234" />

    <TextView
        android:id="@+id/description_textview"
        style="@style/WorkorderDetail_Field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Other stuff" />

    <View
        style="@style/WorkorderDetail_Separator"
        android:layout_width="match_parent" />

</LinearLayout>