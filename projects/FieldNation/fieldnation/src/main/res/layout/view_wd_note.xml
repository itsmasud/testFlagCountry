<?xml version="1.0" encoding="utf-8"?>
<com.fieldnation.ui.TileView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/alertthumb_imageview"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="8dp"
            android:src="@drawable/ic_alert_thumb" />

        <TextView
            android:id="@+id/message_textview"
            style="@style/Text_Body_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/date_textview"
            android:layout_toRightOf="@+id/alertthumb_imageview"
            android:text="Message Content" />

        <TextView
            android:id="@+id/date_textview"
            style="@style/Text_Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_below="@+id/message_textview"
            android:text="1 day" />
    </RelativeLayout>
</com.fieldnation.ui.TileView>