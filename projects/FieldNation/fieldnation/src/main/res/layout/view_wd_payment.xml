<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        style="?attr/tileContainerStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.fieldnation.ui.IconFontTextView
            style="@style/Text_Body_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/icon_dollar"
            android:textColor="@color/fn_light_text"
            android:textSize="32sp" />

        <TextView
            android:id="@+id/pay_textview"
            style="@style/Text_Body_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:text="@string/placeholder_date_long" />

    </LinearLayout>

    <View style="@style/DividerFull" />

    <com.fieldnation.v2.ui.workorder.PenaltySummaryView
        android:id="@+id/penalty_summary_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible" />

    <com.fieldnation.v2.ui.workorder.BonusSummaryView
        android:id="@+id/bonus_summary_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible" />

    <com.fieldnation.v2.ui.workorder.InsuranceSummaryView
        android:id="@+id/insurance_summary_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible" />

    <TextView
        android:id="@+id/terms_textview"
        style="@style/TextViewLink"
        android:layout_width="match_parent"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="@string/view_field_nation_terms"
        android:textSize="14sp" />

    <View style="@style/DividerFull" />

</LinearLayout>