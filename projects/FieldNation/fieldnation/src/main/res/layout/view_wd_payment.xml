<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.fieldnation.v2.ui.ListItemTwoHorizTwoVertView
        android:id="@+id/pay_summary_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible" />

    <com.fieldnation.v2.ui.workorder.BonusSummaryView
        android:id="@+id/bonus_summary_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible" />

    <com.fieldnation.v2.ui.workorder.PenaltySummaryView
        android:id="@+id/penalty_summary_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible" />

    <com.fieldnation.v2.ui.workorder.FnFeeSummaryView
        android:id="@+id/fnServiceFeeSummaryView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <com.fieldnation.v2.ui.workorder.InsuranceSummaryView
        android:id="@+id/insurance_summary_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible" />
</LinearLayout>