<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal">

    <ImageView
        android:id="@+id/sep1"
        style="@style/WorkorderDetail_ProgressSep" />

    <LinearLayout
        android:id="@+id/node_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4">

        <LinearLayout
            android:id="@+id/progressnode_layout1"
            style="@style/WorkorderDetail_ProgressNode"
            android:orientation="vertical">

            <com.fieldnation.ui.workorder.detail.ProgressNode
                android:id="@+id/progressNode1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                app:text="Available" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/progressnode_layout2"
            style="@style/WorkorderDetail_ProgressNode"
            android:orientation="vertical">

            <com.fieldnation.ui.workorder.detail.ProgressNode
                android:id="@+id/progressNode2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                app:text="Requested" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/progressnode_layout3"
            style="@style/WorkorderDetail_ProgressNode"
            android:orientation="vertical">

            <com.fieldnation.ui.workorder.detail.ProgressNode
                android:id="@+id/progressNode3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                app:text="Assigned" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/progressnode_layout4"
            style="@style/WorkorderDetail_ProgressNode"
            android:orientation="vertical">

            <com.fieldnation.ui.workorder.detail.ProgressNode
                android:id="@+id/progressNode4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                app:text="Confirm" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>