<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            style="@style/Text_Subhead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:text="SCHEDULE" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <com.fieldnation.ui.IconFontTextView
                style="@style/Text_Subhead"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:text="@string/icfont_calendar"
                android:textColor="@color/fn_light_text" />

            <TextView
                android:id="@+id/date_textview"
                style="@style/Text_Body_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="Wednesday, Dec 40, 2103\nWednesday, Dec 15, 2103" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.fieldnation.ui.IconFontTextView
                style="@style/Text_Subhead"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:text="@string/icfont_clock"
                android:textColor="@color/fn_light_text" />

            <TextView
                android:id="@+id/time_textview"
                style="@style/Text_Body_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="1:00am - 2:15pm (CST)" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/duration_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <com.fieldnation.ui.IconFontTextView
                style="@style/Text_Subhead"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:text="@string/icfont_stopwatch"
                android:textColor="@color/fn_light_text" />

            <TextView
                android:id="@+id/duration_textview"
                style="@style/Text_Body_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="For 6 Hours" />
        </LinearLayout>


    </LinearLayout>

    <View
        style="@style/DividerFull"
        android:layout_width="match_parent"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp" />
</LinearLayout>