<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="?attr/cardContainerStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.fieldnation.ui.IconFontTextView
        android:id="@+id/icon_view"
        style="@style/Text_Body_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="@string/icon_task"
        android:textSize="32sp" />

    <TextView
        android:id="@+id/description_textview"
        style="@style/Text_Body_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/icon_view"
        android:text="Upload or take a picture of the upgraded ARMs serial number" />

</RelativeLayout>