<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible" >

        <TextView
            style="@style/WorkorderDetail_FieldTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tasks" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/taskcount_textview"
                style="@style/WorkorderDetail_Field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 " />

            <TextView
                style="@style/WorkorderDetail_Field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tasks_are_associated_with_this_work_order" />
        </LinearLayout>

        <TextView
            android:id="@+id/viewtasks_textview"
            style="@style/TextViewLink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/view_all_tasks" />

        <View
            style="@style/WorkorderDetail_Separator"
            android:layout_width="match_parent" />
    </LinearLayout>
    <!-- loading layout -->

    <RelativeLayout
        android:id="@+id/loading_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:visibility="gone" >

        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />
    </RelativeLayout>

</RelativeLayout>