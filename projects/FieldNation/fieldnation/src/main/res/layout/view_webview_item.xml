<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fn_clickable_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/title_textview"
            style="@style/Text_Subhead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:layout_toLeftOf="@+id/expand_button"
            android:text="@string/view_standard_instructions"
            android:textColor="@color/fn_dark_text" />

        <WebView
            android:id="@+id/data_webview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@+id/expand_button"
            android:visibility="gone" />

        <com.fieldnation.ui.IconFontTextView
            android:id="@+id/expand_button"
            style="?attr/buttonFlatStyle"
            android:layout_width="48dp"
            android:layout_alignParentRight="true"
            android:text="@string/icon_chevron_down"
            android:textColor="@color/fn_dark_text" />
    </RelativeLayout>

    <View style="@style/DividerFull" />

</LinearLayout>