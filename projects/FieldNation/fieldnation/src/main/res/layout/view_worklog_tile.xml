<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="?attr/tileContainerStyle"
    >


    <TextView
        android:id="@+id/time_textview"
        style="@style/Text_Body_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/hours_textview"
        android:text="9:08 pm - 7:50 am" />

    <TextView
        android:id="@+id/hours_textview"
        style="@style/Text_Body_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="10.75 hours" />


    <TextView
        android:id="@+id/date_textview"
        style="@style/Text_Caption"
        android:layout_below="@+id/time_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="11/6/2013" />

    <TextView
        android:id="@+id/devices_textview"
        style="@style/Text_Caption"
        android:layout_below="@+id/hours_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="2 Devices" />

</RelativeLayout>