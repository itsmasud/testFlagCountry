    <!-- main content -->

    <RelativeLayout
        android:id="@+id/content_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_bg"
        android:visibility="visible">

        <!-- stilt to set minimum height -->

        <View
            android:layout_width="1px"
            android:layout_height="110dp" />

        <!-- bundle bar -->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:padding="8dp">

            <RelativeLayout
                android:id="@+id/bundle_layout"
                style="@style/WorkorderCard_BundleLayout"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/bundle_imageview"
                    style="@style/WorkorderCard_Bundle_Icon"
                    android:layout_alignParentLeft="true" />

                <TextView
                    android:id="@+id/bundle_title"
                    style="@style/WorkorderCard_Bundle_Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/bundle_imageview"
                    android:text="@string/bundle" />

                <TextView
                    android:id="@+id/bundle_textview"
                    style="@style/WorkorderCard_Bundle_Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="@string/placeholder_word" />
            </RelativeLayout>

            <!-- title + pay -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_toLeftOf="@+id/payment_layout"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/message_alert_imageview"
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/ic_message_thumb"
                                android:visibility="gone" />

                            <ImageView
                                android:id="@+id/notification_alert_imageview"
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/ic_alert_thumb"
                                android:visibility="gone" />

                            <TextView
                                android:id="@+id/title_textview"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:text="@string/placeholder_phrase"
                                android:textAppearance="?android:attr/textAppearanceMedium" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Work Order Id: " />

                            <TextView
                                android:id="@+id/workorderid_textview"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="6546513516516" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/payment_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:gravity="right"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/payment_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$1000.00" />

                        <TextView
                            android:id="@+id/basis_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hourly" />

                    </LinearLayout>
                </RelativeLayout>
                <!-- body -->
                <TextView
                    android:id="@+id/clientname_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/placeholder_word" />

                <TextView
                    android:id="@+id/distance_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/placeholder_word"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/location_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/placeholder_word" />

                <TextView
                    android:id="@+id/when_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/placeholder_word" />

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_gravity="right"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/action_button_green"
                        android:minWidth="150dp"
                        style="@style/Material.Button.Raised.Green"
                        android:text="@string/placeholder_phrase"
                        android:visibility="visible" />

                    <Button
                        android:id="@+id/action_button_gray"
                        android:minWidth="150dp"
                        style="?attr/buttonGrayStyle"
                        android:text="@string/placeholder_phrase"
                        android:visibility="visible" />

                    <Button
                        android:id="@+id/action_button_orange"
                        android:minWidth="150dp"
                        style="?attr/buttonOrangeStyle"
                        android:text="@string/placeholder_phrase"
                        android:visibility="visible" />
                </FrameLayout>
            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

    <!-- status layout -->
    <View
        android:id="@id/status_view"
        android:layout_width="32dp"
        android:layout_height="10dp"
        android:layout_alignTop="@id/content_layout"
        android:layout_alignBottom="@+id/content_layout"
        android:background="@drawable/card_status_orange" />

    <com.fieldnation.ui.VerticalTextView
        android:id="@+id/status_textview"
        android:layout_width="32dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:ellipsize="none"
        android:gravity="center"
        android:maxLines="1"
        android:text="@string/placeholder_word" />
    <!-- loading layout -->

    <RelativeLayout
        android:id="@+id/loading_layout"
        style="@style/WorkorderCard_LoadingLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:visibility="gone">

        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />
    </RelativeLayout>

    <!-- undo layout -->

    <RelativeLayout
        android:id="@+id/undo_layout"
        style="@style/WorkorderCard_UndoLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <Button
            android:id="@+id/undo_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Undo" />
    </RelativeLayout>

</RelativeLayout>