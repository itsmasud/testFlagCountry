<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Tile">
        <item name="android:background">@color/white</item>
    </style>

    <style name="Tile_Container">
        <item name="android:padding">@dimen/Tile_Content_Padding</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="Tile_Text_Title" parent="@style/Text_Headline">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Tile_Text_Body" parent="@style/Text_Body_2">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Tile_Text_Status" parent="@style/Text_Caption">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Tile_ActionBar">
        <item name="android:background">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/Button_Touch_Target</item>
        <item name="android:layout_marginBottom">@dimen/Tile_ActionBar_Gutters</item>
        <item name="android:paddingLeft">@dimen/Tile_ActionBar_Gutters</item>
        <item name="android:paddingRight">@dimen/Tile_ActionBar_Gutters</item>
        <item name="android:gravity">left</item>

    </style>

    <style name="Tile_EditText_OneLine" parent="@style/EditText">
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="Tile_CheckBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_marginBottom">6dp</item>
    </style>

    <style name="Tile_SpinnerButton" parent="@android:style/Widget.Spinner">

    </style>

</resources>