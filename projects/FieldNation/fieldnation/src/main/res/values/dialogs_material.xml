<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <dimen name="dialogGutter_Material">24dp</dimen>
    <dimen name="dialogActionBarPadding_Material">16dp</dimen>
    <dimen name="dialogActionBarGutter_Material">16dp</dimen>
    <!--<dimen name="dialogContentPadding_Material">16dp</dimen>-->
    <dimen name="dialogActionBarBottomMargin_Material">8dp</dimen>
    <dimen name="dialogButtonTouchTarget_Material">@dimen/buttonTouchTarget_Material</dimen>
    <!--<dimen name="dialogButtonHeight_Material">36dp</dimen>-->

    <color name="dialogBg_Material">@color/white</color>

    <style name="DurationNumberPad.Material" parent="ButtonWhite">
        <item name="android:layout_margin">5dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:background">@null</item>
    </style>

    <style name="DurationNumberPadSpacer.Material">
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="DurationNumber.Material">
        <item name="android:textSize">34sp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>

    <style name="DurationMarker.Material">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="Dialog.Material">
        <item name="android:background">@color/dialogBg_Material</item>
    </style>

    <style name="DialogContainer.Material">
        <item name="android:paddingLeft">@dimen/dialogGutter_Material</item>
        <item name="android:paddingRight">@dimen/dialogGutter_Material</item>
        <item name="android:paddingTop">@dimen/dialogGutter_Material</item>
        <item name="android:paddingBottom">@dimen/dialogActionBarPadding_Material</item>
    </style>

    <style name="DialogTitle.Material" parent="@style/Text_Headline">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="DialogLabel.Material" parent="@style/Text_Subhead">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="DialogCaption.Material" parent="@style/Text_Caption">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="DialogEditText.Material" parent="@style/EditText">
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:layout_height">36dp</item>
    </style>

    <style name="DialogActionBar.Material">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dialogButtonTouchTarget_Material</item>
        <item name="android:layout_marginBottom">@dimen/dialogActionBarBottomMargin_Material</item>
        <item name="android:paddingLeft">@dimen/dialogActionBarGutter_Material</item>
        <item name="android:paddingRight">@dimen/dialogActionBarGutter_Material</item>
        <item name="android:gravity">right</item>
    </style>

    <style name="DialogCancelButton.Material" parent="Button.Material.Flat">
        <item name="android:layout_gravity">right|center_vertical</item>
        <item name="android:layout_marginRight">4dp</item>
    </style>

    <style name="DialogOkButton.Material" parent="Button.Material.Flat">
        <item name="android:layout_gravity">right|center_vertical</item>
        <item name="android:layout_marginLeft">4dp</item>
    </style>

    <style name="DialogOkButtonGreen.Material" parent="ButtonGreen">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="DialogSpinnerButton.Material" parent="ButtonSpinner"></style>

</resources>