<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <dimen name="MessageCard_PaddingWidth">30dp</dimen>
    <dimen name="MessageCard_StatusWidth">25dp</dimen>

    <style name="MessageCard">
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="MessageCard_Padding">
        <item name="android:background">@drawable/card_mid</item>
    </style>

    <style name="MessageCard_RightSide">
        <item name="android:background">@drawable/card_right</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>
    </style>

    <style name="MessageCard_Body">
        <item name="android:paddingTop">5dp</item>
    </style>

    <style name="MessageCard_Time">
        <item name="android:textColor">@color/cardLabelText</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="MessageCard_StatusLabel">
        <item name="android:textColor">@color/cardLabelText</item>
        <item name="android:textStyle">italic</item>
    </style>

</resources>