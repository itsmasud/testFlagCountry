<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="MessageView">
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="MessageView_MessageSent">
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">25dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:background">@drawable/message_sent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MessageView_MessageRcvd">
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">25dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:background">@drawable/message_rcvd</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MessageView_ProfileImage">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/missing</item>
    </style>

    <style name="MessageView_ProfileImageSent" parent="MessageView_ProfileImage">
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="MessageView_ProfileImageRcvd" parent="MessageView_ProfileImage">
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="MessageView_StatusBarSent">
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="MessageView_StatusBarRcvd">
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="MessageView_Status_Clock_IconFont">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:textColor">@color/fn_light_text</item>
        <item name="android:textSize">12sp</item>
        <item name="android:text">@string/icon_clock</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="MessageView_Status_Time">
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MessageView_Status_Pending">
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <style name="MessageView_Status_Check_IconFont">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:textColor">@color/fn_light_text</item>
        <item name="android:textSize">12sp</item>
        <item name="android:text">@string/icon_user_no_circle</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="MessageView_Status_Orange_IconFont">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/fn_brandcolor</item>
        <item name="android:text">@string/icon_messages_solid</item>
    </style>

</resources>