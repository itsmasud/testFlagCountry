<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="SignatureActivity">
        <item name="android:background">@color/activity_bg</item>
    </style>

    <style name="SignatureContents">
        <item name="android:padding">0dp</item>
    </style>

    <style name="ArrivalStyle">
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginTop">3dp</item>
    </style>

    <style name="DepartureStyle">
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginTop">3dp</item>
    </style>

    <style name="SignatureLine">
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
    </style>

    <style name="SignatureName">
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textColor">@color/SignatureCardGrey</item>
    </style>

</resources>