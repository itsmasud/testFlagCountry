<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Spinner" parent="Widget.AppCompat.Spinner">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/fn_dark_text</item>
        <item name="android:textColorHint">@color/fn_light_text</item>
    </style>

    <style name="SpinnerButton" parent="Widget.AppCompat.Spinner">
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/fn_dark_text</item>
        <item name="android:textColorHint">@color/fn_light_text</item>
    </style>

</resources>