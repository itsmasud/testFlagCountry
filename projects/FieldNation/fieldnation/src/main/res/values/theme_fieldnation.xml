    <style name="FieldNation.Leaving.Theme" parent="FieldNation.Material.Theme">
        <item name="colorPrimary">#FF671d26</item>
        <item name="colorPrimaryDark">#FF671d26</item>
        <item name="colorAccent">#FF671d26</item>
