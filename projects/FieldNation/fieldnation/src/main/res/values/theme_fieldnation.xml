    <style name="FieldNation.Material.Theme" parent="FieldNation.ActionBar.Theme">
        <!-- Main theme colors v21+ -->
        <!--   your app branding color for the app bar -->
        <item name="colorPrimary">@color/fn_grad_start</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/fn_grad_end</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <!--<item name="colorAccent">@color/fn_brandcolor</item>-->
        <item name="colorAccent">@color/fn_clickable_text</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>

        <!--<item name="android:windowContentOverlay">@null</item>-->
        <!--<item name="android:windowBackground">@color/black</item>-->

        <item name="android:textColor">@color/fn_dark_text</item>
        <item name="android:textColorLink">@color/fn_clickable_text</item>

        <!--<item name="android:buttonStyle">@style/Button.Material.Flat</item>-->

        <!-- android widgets -->
        <!--<item name="android:editTextStyle">@style/EditText</item>-->
        <!--<item name="android:buttonStyle">?attr/buttonDefaultStyle</item>-->
        <!--<item name="android:radioButtonStyle">@style/RadioButton</item>-->

        <!-- login styles -->
        <item name="activityLoginStyle">@style/Login.Activity</item>
        <item name="loginFaderStyle">@style/Login.Fader</item>
        <item name="loginPageStyle">@style/Login.Page</item>
        <item name="loginStiltStyle">@style/Login.Stilt</item>
        <item name="loginLogoStyle">@style/Login.Logo</item>
        <item name="loginContentStyle">@style/Login.Content</item>
        <!--<item name="loginEditTextStyle">@style/Login.EditText</item>-->

        <!-- drawer styles -->
        <item name="drawerStyle">@style/Drawer</item>
        <!-- toolbar -->
        <item name="fnToolbarStyle">@style/toolbarStyle</item>
        <item name="fnToolbarTabListStyle">@style/toolbarTabListStyle</item>
        <item name="fnToolbarTabListContainerStyle">@style/toolbarTabListContainerStyle</item>


        <!-- activities -->
        <item name="activityMainStyle">@style/ActivityMain</item>
        <item name="activitySignatureStyle">@style/SignatureActivity</item>
        <item name="activitySplashStyle">@style/SplashActivity</item>

        <!-- dividers -->
        <item name="dividerFullStyle">@style/DividerFull</item>
        <item name="dividerPartialStyle">@style/DividerPart</item>

        <!-- buttons -->
        <item name="buttonDefaultStyle">@style/Material.Button.Raised.White</item>
        <item name="buttonWhiteStyle">@style/Material.Button.Raised.White</item>
        <item name="buttonOrangeStyle">@style/Material.Button.Raised.Orange</item>
        <item name="buttonGreenStyle">@style/Material.Button.Raised.Green</item>
        <item name="buttonGrayStyle">@style/Material.Button.Raised.Gray</item>
        <item name="buttonFlatStyle">@style/Material.Button.Flat</item>

        <!-- tile styles -->
        <item name="tileStyle">@style/Tile.Material</item>
        <item name="tileContainerStyle">@style/TileContainer.Material</item>
        <item name="tileTextTitleStyle">@style/TileTextTitle.Material</item>
        <item name="tileTextBodyStyle">@style/TileTextBody.Material</item>
        <item name="tileTextStatusStyle">@style/TileTextStatus.Material</item>
        <item name="tileActionBarStyle">@style/TileActionBar.Material</item>
        <!--<item name="tileEditTextOneLineStyle">@style/TileEditTextOneLine.Material</item>-->
        <item name="tileCheckBoxStyle">@style/TileCheckBox.Material</item>
        <!--<item name="tileEditText">@style/TileEditText</item>-->
        <item name="tileButtonStyle">@style/TileButton.Material</item>
        <item name="tileDividerStyle">@style/TileDivider.Material</item>
        <item name="tileDividerPartStyle">@style/TileDividerPart.Material</item>

        <!-- card styles -->
        <item name="cardStyle">@style/Card</item>
        <item name="cardContainerStyle">@style/CardContainer</item>

        <!-- dialogs -->
        <item name="dialogStyle">@style/Dialog</item>
        <item name="dialogContainerStyle">@style/DialogContainer.Material</item>
        <item name="dialogTitleStyle">@style/DialogTitle.Material</item>
        <item name="dialogLabelStyle">@style/DialogLabel.Material</item>
        <item name="dialogCaptionStyle">@style/DialogCaption.Material</item>
        <!--<item name="dialogEditTextStyle">@style/DialogEditText.Material</item>-->
        <item name="dialogActionBarStyle">@style/DialogActionBar.Material</item>
        <item name="dialogCancelButtonStyle">@style/DialogCancelButton.Material</item>
        <item name="dialogOkButtonStyle">@style/DialogOkButton.Material</item>
        <item name="dialogOkButtonGreenStyle">@style/DialogOkButtonGreen.Material</item>
        <item name="dialogBodyStyle">@style/DialogBody</item>
        <item name="dialogBodyNoPaddingStyle">@style/DialogBodyNoPadding</item>
        <item name="dialogDividerStyle">@style/DialogDivider</item>

    </style>

