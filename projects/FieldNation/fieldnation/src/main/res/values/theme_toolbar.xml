<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="FieldNation.Material.ToolBar" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColorPrimary">@color/fn_white_text</item>
        <item name="android:actionMenuTextColor">@color/fn_white_text</item>
        <item name="android:textColor">@color/fn_white_text</item>
        <item name="colorAccent">@color/fn_brandcolor_80</item>
    </style>

    <style name="FieldNation.Material.ToolBar.Blue" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColorPrimary">@color/fn_white_text</item>
        <item name="android:actionMenuTextColor">@color/fn_white_text</item>
        <item name="android:textColor">@color/fn_white_text</item>
        <item name="android:titleTextStyle">
            @style/FieldNation.Material.ToolBar.Blue.TitleTextStyle
        </item>
    </style>

    <style name="FieldNation.Material.ToolBar.Blue.TitleTextStyle" parent="@android:style/Widget.TextView">
        <item name="android:textSize">12sp</item>
    </style>
</resources>