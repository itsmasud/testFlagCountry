<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="WorkorderDetail">
        <item name="android:background">@color/workorder_detail_bg</item>
    </style>

    <style name="WorkorderDetail_Data">
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
    </style>

    <style name="WorkorderDetail_Separator">
        <item name="android:background">@color/workorder_detail_separator_color</item>
        <item name="android:layout_height">2px</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="WorkorderDetail_ProjectTitle">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="WorkorderDetail_Field">
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="WorkorderDetail_Field_Bold">
        <item name="android:paddingBottom">15dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/workorderDetailFieldBoldTextColor</item>
    </style>

    <style name="WorkorderDetail_FieldTitle" parent="WorkorderDetail_Field">
        <item name="android:textColor">@color/workorderDetailFieldTitleTextColor</item>
    </style>

    <style name="WorkorderDetail_Field_Gray" parent="WorkorderDetail_Field">
        <item name="android:textColor">@color/workorderDetailFieldGray</item>
    </style>

    <style name="WorkorderDetail_FieldSubTitle" parent="WorkorderDetail_FieldTitle">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="WorkorderDetail_ProgressSep">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginLeft">32dp</item>
        <item name="android:layout_marginRight">32dp</item>
        <item name="android:background">@drawable/wo_detail_progress_sep</item>
    </style>

    <style name="WorkorderDetail_ProgressNode">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

</resources>