<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFFFF">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="96dp"
        android:layout_marginRight="96dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/camera" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imageView"
            android:paddingTop="12dp">

            <TextView
                android:id="@+id/title_textview"
                style="@style/Text_Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="24dp"
                android:gravity="left"
                android:text="Location Information"
                android:textColor="#FF1e1e1e" />

            <TextView
                android:id="@+id/description_textviews"
                style="@style/Text_Body_1_Caption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/title_textview"
                android:layout_marginBottom="16dp"
                android:layout_marginRight="24dp"
                android:gravity="left"
                android:text="We need access to a small portion of your system storage to store temporrary files and to allow you tot download and upload files from a work order."
                android:textColor="#FF1e1e1e" />

            <TextView
                android:id="@+id/access_button"
                style="@style/Material.Button.Flat"
                android:layout_below="@id/description_textviews"
                android:layout_marginRight="24dp"
                android:gravity="center"
                android:text="GIVE ACCESS" />

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>