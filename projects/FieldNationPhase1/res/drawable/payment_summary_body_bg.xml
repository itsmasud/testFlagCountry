<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle" >
            <corners
                android:bottomLeftRadius="@dimen/card_corner_radius"
                android:bottomRightRadius="@dimen/card_corner_radius" />

            <solid android:color="@color/card_bevel" >
            </solid>
        </shape>
    </item>
    <item android:bottom="@dimen/card_bevel_height">
        <shape android:shape="rectangle" >
            <corners
                android:bottomLeftRadius="@dimen/card_corner_radius"
                android:bottomRightRadius="@dimen/card_corner_radius" />

            <solid android:color="@color/card_inside_bg" >
            </solid>
        </shape>
    </item>

</layer-list>