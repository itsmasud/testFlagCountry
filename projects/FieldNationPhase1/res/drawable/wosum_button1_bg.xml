<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle" >
            <corners
                android:bottomLeftRadius="@dimen/wosum_button_radius"
                android:bottomRightRadius="@dimen/wosum_button_radius"
                android:topLeftRadius="@dimen/wosum_button_radius"
                android:topRightRadius="@dimen/wosum_button_radius" />

            <solid android:color="@color/wosumButton1Bevel" >
            </solid>
        </shape>
    </item>
    <item
        android:bottom="@dimen/wosum_button_dropshadow"
        android:left="@dimen/wosum_button_dropshadow">
        <shape android:shape="rectangle" >
            <corners
                android:bottomLeftRadius="@dimen/wosum_button_radius"
                android:bottomRightRadius="@dimen/wosum_button_radius"
                android:topLeftRadius="@dimen/wosum_button_radius"
                android:topRightRadius="@dimen/wosum_button_radius" />

            <gradient
                android:angle="-90"
                android:endColor="@color/wosumButton1GradientBot"
                android:startColor="@color/wosumButton1GradientTop" />
        </shape>
    </item>

</layer-list>