<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle" >
            <corners
                android:bottomLeftRadius="@dimen/buttonCorners"
                android:bottomRightRadius="@dimen/buttonCorners"
                android:topLeftRadius="@dimen/buttonCorners"
                android:topRightRadius="@dimen/buttonCorners" />

            <solid android:color="@color/wosumButton3Bevel" >
            </solid>
        </shape>
    </item>
    <item
        android:bottom="2px"
        android:left="2px">
        <shape android:shape="rectangle" >
            <corners
                android:bottomLeftRadius="@dimen/buttonCorners"
                android:bottomRightRadius="@dimen/buttonCorners"
                android:topLeftRadius="@dimen/buttonCorners"
                android:topRightRadius="@dimen/buttonCorners" />

            <gradient
                android:angle="-90"
                android:endColor="@color/wosumButton3GradientBot"
                android:startColor="@color/wosumButton3GradientTop" />
        </shape>
    </item>

</layer-list>