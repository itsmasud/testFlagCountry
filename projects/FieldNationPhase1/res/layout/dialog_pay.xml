<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <Spinner
        android:id="@+id/type_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <FrameLayout
        android:id="@+id/fixed_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" >

        <EditText
            android:id="@+id/fixed_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/fixed_pay_amount" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/hourly_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone" >

        <EditText
            android:id="@+id/hourlyrate_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hourly_rate" />

        <EditText
            android:id="@+id/maxhours_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/max_hours" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/devices_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone" >

        <EditText
            android:id="@+id/devicerate_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/per_device_rate" />

        <EditText
            android:id="@+id/maxdevices_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/max_devices" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/blended_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pay_of" />

            <EditText
                android:id="@+id/blendedhourlyrate_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/per_hour_for_the_first" />

            <EditText
                android:id="@+id/blendedmaxhours_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hours" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/then" />

            <EditText
                android:id="@+id/extrahours_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/per_hour_up_to" />

            <EditText
                android:id="@+id/extramaxhours_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/additional_hours" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/ok_button"
        style="@style/ButtonGreen"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_gravity="right"
        android:text="@string/ok" />

</LinearLayout>