<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.fieldnation"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.fieldnation.ListViewEx
        android:id="@+id/workorders_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >
    </com.fieldnation.ListViewEx>

    <ProgressBar
        android:id="@+id/loading_progressbar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:indeterminate="true" />

    <TextView
        android:id="@+id/nodata_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/no_data"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/refresh_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nodata_textview"
        android:layout_centerHorizontal="true"
        android:src="@android:drawable/ic_popup_sync"
        android:visibility="gone" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" >

        <com.fieldnation.ProgressBarRev
            android:id="@+id/overscrollleft_progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_marginTop="-6dp"
            android:layout_weight="1"
            android:max="200"
            android:padding="0px"
            android:progress="0" />

        <ProgressBar
            android:id="@+id/overscrollright_progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_marginTop="-6dp"
            android:layout_weight="1"
            android:max="200"
            android:padding="0px"
            android:progress="0" />
    </LinearLayout>

</RelativeLayout>