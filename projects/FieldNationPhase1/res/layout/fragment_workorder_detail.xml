<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/WorkorderDetail"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <com.fieldnation.WorkorderDetailSumView
            android:id="@+id/detailsum_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            style="@style/WorkorderDetail_Separator"
            android:layout_width="match_parent" />

        <com.fieldnation.WorkorderDetailLocationView
            android:id="@+id/location_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            style="@style/WorkorderDetail_Separator"
            android:layout_width="match_parent" />

        <View
            style="@style/WorkorderDetail_Separator"
            android:layout_width="match_parent" />

        <TextView
            android:id="@+id/textView14"
            style="@style/WorkorderDetail_FieldTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment" />

        <!-- TODO put payament detail view here -->
    </LinearLayout>

</ScrollView>