<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <View
        android:id="@+id/bar1_view"
        style="@style/WorkorderDetail_Separator"
        android:layout_width="match_parent" />

    <TextView
        android:id="@+id/title_textview"
        style="@style/WorkorderDetail_FieldTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp" />

    <LinearLayout
        android:id="@+id/docs_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

    <TextView
        android:id="@+id/upload_textview"
        style="@style/TextViewLink"
        android:layout_width="fill_parent"
        android:text="Upload a File" />

</LinearLayout>