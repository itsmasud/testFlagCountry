<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/WorkorderCard"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/options_layout"
        style="@style/WorkorderCard_Options"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/content_layout"
        android:layout_alignLeft="@+id/content_layout"
        android:layout_alignRight="@+id/content_layout"
        android:layout_alignTop="@+id/content_layout"
        android:layout_margin="20dp" >

        <ImageView
            android:id="@+id/back_imageview"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/grabbar" />

        <LinearLayout
            android:id="@+id/notinterested_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_cancel" />

            <TextView
                style="@style/WorkorderCard_Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:maxLines="1"
                android:paddingLeft="5dp"
                android:text="Not Interested"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#FFFFFFFF" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/content_layout"
        style="@style/WorkorderCard_Inside"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible" >

        <RelativeLayout
            android:id="@+id/status_layout"
            style="@style/WorkorderCard_StatusBar"
            android:layout_width="30dp"
            android:layout_height="fill_parent" >

            <com.fieldnation.ui.VerticalTextView
                android:id="@+id/status_textview"
                style="@style/WorkorderCard_StatusText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/error" />

            <View
                style="@style/WorkorderCard_Separator"
                android:layout_width="2px"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true" />
        </RelativeLayout>

        <LinearLayout
            style="@style/WorkorderCard_DataContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/bundle_layout"
                style="@style/WorkorderCard_BundleLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" >

                <ImageView
                    android:id="@+id/bundle_imageview"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/ic_bundle" />

                <TextView
                    style="@style/WorkorderCard_Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/bundle_imageview"
                    android:maxLines="1"
                    android:text="Bundle"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/bundle_textview"
                    style="@style/WorkorderCard_Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:maxLines="1"
                    android:text="@string/error"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
            </RelativeLayout>

            <View
                android:id="@+id/bundle_separator"
                style="@style/WorkorderCard_Separator"
                android:layout_width="fill_parent"
                android:layout_height="2px"
                android:visibility="gone" />

            <RelativeLayout
                style="@style/WorkorderCard_Inside"
                android:layout_width="match_parent"
                android:layout_height="fill_parent" >

                <LinearLayout
                    android:id="@+id/data_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_toLeftOf="@+id/actions_layout"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <ImageView
                            android:id="@+id/message_alert_imageview"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_alignBaseline="@+id/title_textview"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="1dp"
                            android:src="@drawable/ic_message_thumb"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/notification_alert_imageview"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_alignBaseline="@+id/title_textview"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="2dp"
                            android:layout_toRightOf="@+id/message_alert_imageview"
                            android:src="@drawable/ic_alert_thumb"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/title_textview"
                            style="@style/WorkorderCard_Title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/notification_alert_imageview"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="@string/error"
                            android:textAppearance="?android:attr/textAppearanceMedium" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/clientname_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/error"
                        android:textAppearance="?android:attr/textAppearanceSmall" />

                    <TextView
                        android:id="@+id/distance_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/error"
                        android:textAppearance="?android:attr/textAppearanceSmall" />

                    <TextView
                        android:id="@+id/location_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/error"
                        android:textAppearance="?android:attr/textAppearanceSmall" />

                    <TextView
                        android:id="@+id/when_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/error"
                        android:textAppearance="?android:attr/textAppearanceSmall" />

                    <TextView
                        android:id="@+id/workorderid_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:visibility="gone" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/actions_layout"
                    style="@style/WorkorderCard_ActionsLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentRight="true"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:id="@+id/payment_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/moneysymbol_textview"
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentTop="true"
                                android:gravity="top|right"
                                android:text="@string/money"
                                android:textAppearance="?android:attr/textAppearanceSmall" />

                            <TextView
                                android:id="@+id/payment_textview"
                                style="@style/WorkorderCard_PaymentLabel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="none"
                                android:gravity="right"
                                android:maxLines="1"
                                android:text="000000000000"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textSize="24sp" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/basis_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignRight="@+id/payment_textview"
                            android:layout_below="@+id/payment_textview"
                            android:layout_gravity="right"
                            android:gravity="right"
                            android:maxLines="1"
                            android:text="@string/error"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/detail_button"
                        style="@style/WorkorderCard_Button"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|fill_vertical|right"
                        android:maxLines="1"
                        android:text="@string/error" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>