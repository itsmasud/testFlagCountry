<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/workorder_tab_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/detail_layout"
            android:layout_width="64dp"
            android:layout_height="64dp" >

            <ImageView
                android:id="@+id/detail_imageview"
                android:layout_width="@dimen/workorder_tab_image_width"
                android:layout_height="@dimen/workorder_tab_image_height"
                android:layout_centerInParent="true"
                android:background="@drawable/ic_workorder_tab_detail_button" />
        </RelativeLayout>

        <View
            android:layout_width="@dimen/workorder_tab_separator_size"
            android:layout_height="@dimen/workorder_tab_separator_height"
            android:layout_gravity="center_vertical"
            android:background="@color/workorder_tab_separator_color" />

        <RelativeLayout
            android:id="@+id/messages_layout"
            android:layout_width="64dp"
            android:layout_height="64dp" >

            <ImageView
                android:id="@+id/messages_imageview"
                android:layout_width="@dimen/workorder_tab_image_width"
                android:layout_height="@dimen/workorder_tab_image_height"
                android:layout_centerInParent="true"
                android:background="@drawable/ic_workorder_tab_messages_button" />

            <TextView
                android:id="@+id/messages_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="2"
                android:textColor="@color/workorder_tab_textcolor" />
        </RelativeLayout>

        <View
            android:layout_width="@dimen/workorder_tab_separator_size"
            android:layout_height="@dimen/workorder_tab_separator_height"
            android:layout_gravity="center_vertical"
            android:background="@color/workorder_tab_separator_color" />

        <RelativeLayout
            android:id="@+id/alert_layout"
            android:layout_width="64dp"
            android:layout_height="64dp" >

            <ImageView
                android:id="@+id/alert_imageview"
                android:layout_width="@dimen/workorder_tab_image_width"
                android:layout_height="@dimen/workorder_tab_image_height"
                android:layout_centerInParent="true"
                android:background="@drawable/ic_workorder_tab_alert_button" />

            <TextView
                android:id="@+id/alert_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:paddingTop="6dp"
                android:text="2"
                android:textColor="@color/workorder_tab_textcolor" />
        </RelativeLayout>

        <View
            android:layout_width="@dimen/workorder_tab_separator_size"
            android:layout_height="@dimen/workorder_tab_separator_height"
            android:layout_gravity="center_vertical"
            android:background="@color/workorder_tab_separator_color" />

        <RelativeLayout
            android:id="@+id/attachments_layout"
            android:layout_width="64dp"
            android:layout_height="64dp" >

            <ImageView
                android:id="@+id/attachments_imageview"
                android:layout_width="@dimen/workorder_tab_image_width"
                android:layout_height="@dimen/workorder_tab_image_height"
                android:layout_centerInParent="true"
                android:background="@drawable/ic_workorder_tab_attachments_button" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/workorder_tab_separator_size"
        android:layout_marginLeft="@dimen/workorder_tab_separator_bottom_margin"
        android:layout_marginRight="@dimen/workorder_tab_separator_bottom_margin"
        android:background="@color/workorder_tab_separator_color" />

</LinearLayout>