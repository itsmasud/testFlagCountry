<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Drawer">
        <item name="android:background">@color/drawerBackground</item>
        <item name="android:padding">@dimen/drawer_padding</item>
    </style>

    <style name="DrawerItem">
        <item name="android:paddingLeft">@dimen/drawer_item_paddingLeft</item>
        <item name="android:paddingTop">@dimen/drawer_item_paddingTop</item>
        <item name="android:paddingRight">@dimen/drawer_item_paddingRight</item>
        <item name="android:paddingBottom">@dimen/drawer_item_paddingBottom</item>
        <item name="android:background">@color/drawer_item_background</item>
    </style>

    <style name="DrawerEsitmatedAmount">
        <item name="android:background">@drawable/pay_nav_green</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textColor">@color/drawerPaymentAmountForeground</item>
    </style>

    <style name="DrawerPaidAmount">
        <item name="android:background">@drawable/pay_nav_gray</item>
        <item name="android:textColor">@color/drawerPaymentAmountForeground</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingLeft">10dp</item>
    </style>

    <style name="DrawerItemIcon">
        <item name="android:paddingRight">@dimen/drawer_item_icon_paddingRight</item>
    </style>

    <style name="DrawerSeparator">
        <item name="android:background">@color/drawerForeground</item>
    </style>

</resources>