<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <dimen name="MessageView_PaddingWidth">30dp</dimen>
    <dimen name="MessageView_StatusWidth">25dp</dimen>

    <style name="MessageView">
        <item name="android:padding">10dp</item>
    </style>

    <style name="MessageView_Padding">
        <item name="android:background">@drawable/wo_card_mid</item>
    </style>

    <style name="MessageView_RightSide">
        <item name="android:background">@drawable/wo_card_right</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>
    </style>

    <style name="MessageView_Body">
        <item name="android:paddingTop">5dp</item>
    </style>

    <style name="MessageView_Time">
        <item name="android:textColor">#FF929367</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="MessageView_StatusLabel">
        <item name="android:textColor">#FF929367</item>
        <item name="android:textStyle">italic</item>
    </style>

</resources>