<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <color name="notificationBackground">#FFfe6200</color>
    <color name="notificationForeground">#FFFFFFFF</color>

    <style name="NotificationText">
        <item name="android:background">@drawable/notification_number_background</item>
        <item name="android:textColor">@color/notificationForeground</item>
        <item name="android:textAppearance">@android:attr/textAppearanceSmall</item>
    </style>

    <style name="NotificationCard">
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/card_full</item>
    </style>

    <style name="NotificationCard_StatusLabel">
        <item name="android:textColor">#FF929367</item>
        <item name="android:textStyle">italic</item>
    </style>

</resources>