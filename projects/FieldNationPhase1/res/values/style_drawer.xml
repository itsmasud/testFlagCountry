<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <color name="drawerBackground">#FFe7e8da</color>
    <color name="drawerHighlightBackground">#FFc0e4bc</color>
    <color name="drawerHighlightBorder">#FF5cc087</color>
    <color name="drawerForeground">#FFcecfc0</color>
    <color name="drawerPaymentAmountBackground">#FF3bc89e</color>
    <color name="drawerPaymentAmountForeground">#FFFFFFFF</color>

    <style name="Drawer">
        <item name="android:background">@color/drawerBackground</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="DrawerItem">
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:background">@color/drawer_item_background</item>
    </style>

    <style name="DrawerPaymentAmount">
        <item name="android:background">@drawable/drawer_payment_amount</item>
        <item name="android:textColor">@color/drawerPaymentAmountForeground</item>
    </style>

    <style name="DrawerItemIcon">
        <item name="android:paddingRight">5dp</item>
    </style>

    <style name="DrawerSeparator">
        <item name="android:background">@color/drawerForeground</item>
    </style>

</resources>