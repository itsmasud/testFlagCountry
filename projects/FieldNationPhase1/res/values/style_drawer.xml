<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Drawer">
        <item name="android:background">@color/drawerBackground</item>
        <item name="android:paddingLeft">10px</item>
        <item name="android:paddingTop">10px</item>
        <item name="android:paddingRight">10px</item>
        <item name="android:paddingBottom">10px</item>
    </style>

    <style name="DrawerItem">
        <item name="android:paddingLeft">10px</item>
        <item name="android:paddingTop">30px</item>
        <item name="android:paddingRight">10px</item>
        <item name="android:paddingBottom">30px</item>
        <item name="android:background">@color/drawer_item_background</item>
    </style>

    <style name="DrawerPaymentAmount">
        <item name="android:background">@color/drawer_payment_amount_background</item>
        <item name="android:textColor">@color/drawerPaymentAmountForeground</item>
    </style>

    <style name="DrawerItemIcon">
        <item name="android:paddingRight">30px</item>
    </style>

    <style name="DrawerSeparator">
        <item name="android:background">@color/drawerForeground</item>
    </style>
</resources>