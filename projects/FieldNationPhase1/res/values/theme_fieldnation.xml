<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme.FieldNation" parent="@style/Theme.AppCompat.Light">
        <item name="actionBarStyle">@style/ActionBar.Solid.FieldNation</item>
        <item name="actionBarTabTextStyle">@style/ActionBar.TabTextStyle.FieldNation</item>
        <item name="actionBarTabStyle">@style/ActionBar.TabViewStyle.FieldNation</item>
        <item name="actionMenuTextColor">#FFFFFFFF</item>
    </style>

    <style name="ActionBar.Solid.FieldNation" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="background">@drawable/actionbar_background</item>
        <item name="backgroundStacked">@drawable/actionbar_stacked_background</item>
        <item name="titleTextStyle">@style/ActionBar.TextStyle.FieldNation</item>
        <item name="actionMenuTextColor">#FFFFFFFF</item>
    </style>

    <style name="ActionBar.Transparent.FieldNation" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="background">@drawable/actionbar_background</item>
        <item name="backgroundStacked">@drawable/actionbar_stacked_background</item>
        <item name="titleTextStyle">@style/ActionBar.TextStyle.FieldNation</item>
        <item name="actionMenuTextColor">#FFFFFFFF</item>
    </style>

    <style name="ActionBar.TextStyle.FieldNation" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">#FFFFFFFF</item>
    </style>

    <style name="ActionBar.TabTextStyle.FieldNation" parent="@style/Widget.AppCompat.ActionBar.TabText">
        <item name="android:textColor">#FFFFFFFF</item>
    </style>

    <style name="ActionBar.TabViewStyle.FieldNation" parent="@style/Widget.AppCompat.Light.ActionBar.TabView">
        <item name="android:background">@drawable/actionbar_tab</item>
    </style>

    <style name="spb_loading">
        <item name="android:layout_height">8dp</item>
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:padding">0dp</item>
        <item name="spb_sections_count">1</item>
        <item name="spb_stroke_width">8dp</item>
        <item name="spb_stroke_separator_length">0dp</item>
        <item name="spb_progressiveStart_speed">2.0</item>
        <item name="spb_progressiveStop_speed">2.0</item>
        <item name="spb_reversed">true</item>
        <item name="spb_mirror_mode">true</item>
        <item name="spb_colors">@array/loading_bar_colors</item>
        <item name="spb_speed">2.0</item>
        <item name="spb_interpolator">spb_interpolator_acceleratedecelerate</item>
    </style>

</resources>