<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="WorkorderDetail">
        <item name="android:background">@color/workorder_detail_bg</item>
    </style>

    <style name="WorkorderDetail_Data">
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
    </style>

    <style name="WorkorderDetail_Separator">
        <item name="android:background">@color/workorder_detail_separator_color</item>
        <item name="android:layout_height">2px</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="WorkorderDetail_ProjectTitle">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="WorkorderDetail_Field">
        <item name="android:paddingBottom">15dp</item>
    </style>

    <style name="WorkorderDetail_Field_Bold">
        <item name="android:paddingBottom">15dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="WorkorderDetail_FieldTitle" parent="WorkorderDetail_Field">
        <item name="android:textColor">#FF97976e</item>
    </style>

    <style name="WorkorderDetail_FieldSubTitle" parent="WorkorderDetail_FieldTitle">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="WorkorderDetail_CheckBox">
        <item name="android:drawableLeft">@drawable/ic_checkbox_check</item>
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/task_border</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="WorkorderDetail_EditText">
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/textview_bg</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="WorkorderDetail_RadioButton">
        <item name="android:drawableLeft">@drawable/ic_radio_button</item>
        <item name="android:button">@null</item>
        <item name="android:background">@null</item>
    </style>

    <style name="WorkorderDetail_ProgressSep">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginLeft">32dp</item>
        <item name="android:layout_marginRight">32dp</item>
        <item name="android:background">@drawable/wo_detail_progress_sep</item>
    </style>

    <style name="WorkorderDetail_ProgressNode">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

</resources>