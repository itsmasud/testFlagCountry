<?xml version="1.0" encoding="UTF-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="WorkorderSummary">
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="WorkorderSummary_Inside">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="WorkorderSummary_BundleLayout">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="WorkorderSummary_DataContainer">
        <item name="android:background">@drawable/card_right</item>
    </style>

    <style name="WorkorderSummary_StatusBar">
        <item name="android:background">@drawable/wosum_status_1</item>
    </style>

    <style name="WorkorderSummary_StatusText">
        <item name="android:maxLines">1</item>
        <item name="android:paddingTop">5dp</item>
    </style>

    <style name="WorkorderSummary_ActionsLayout"></style>

    <style name="WorkorderSummary_Separator">
        <item name="android:background">@color/wosumStatusSeparator</item>
    </style>

    <style name="WorkorderSummary_Title"></style>

    <style name="WorkorderSummary_Button" parent="android:attr/buttonStyleSmall">
        <item name="android:background">@drawable/wosum_button1_bg</item>
        <item name="android:textColor">@color/wosumButton1Foreground</item>
    </style>

    <style name="WorkorderSummary_Label">
        <item name="android:textColor">#FFc1c1a9</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    <style name="WorkorderSummary_PaymentLabel"></style>

    <style name="WorkorderSummary_Options">
        <item name="android:background">@color/wosumOptionsBackground</item>
    </style>

</resources>